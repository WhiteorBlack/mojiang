<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ListView
        android:id="@+id/acti_needs_confirm_bid_order_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:divider="@color/color_trans"
        android:dividerHeight="5dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_grey_f3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/acti_needs_confirm_bid_connection_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/nomal_submit_height"
            android:visibility="gone"
            android:gravity="center"
            android:background="@color/color_theme_lighter"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_white"
            android:text="联系TA"/>
        <TextView
            android:id="@+id/acti_needs_confirm_bid_sub_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/nomal_submit_height"
            android:visibility="gone"
            android:gravity="center"
            android:background="@color/color_theme"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_white"
            android:text="提交报价"/>
        <TextView
            android:id="@+id/acti_needs_confirm_bid_confirm_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/nomal_submit_height"
            android:visibility="gone"
            android:gravity="center"
            android:background="@color/color_theme"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_white"
            android:text="立即下单"/>
    </LinearLayout>
</LinearLayout>