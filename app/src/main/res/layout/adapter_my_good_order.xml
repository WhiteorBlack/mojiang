<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_greyf2_selector">
    <LinearLayout
        android:id="@+id/adapter_my_good_order_type_lay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:id="@+id/adapter_my_good_order_time_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="@dimen/textSize_twelve"
            android:textColor="@color/color_grey_text"/>
        <TextView
            android:id="@+id/adapter_my_good_order_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/textSize_twelve"
            android:textColor="@color/color_grey_text"/>
    </LinearLayout>
    <cn.idcby.jiajubang.view.RecyclerViewFocusble
        android:id="@+id/adapter_my_good_order_good_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_grey_f2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nomal_item_height"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/adapter_my_good_order_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_nomal_text"/>
        <TextView
            android:id="@+id/adapter_my_good_order_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textSize="@dimen/textSize_fifteen"
            android:textColor="@color/color_nomal_text"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_grey_f2" />
    <LinearLayout
        android:id="@+id/adapter_my_good_order_options_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nomal_item_height"
        android:visibility="gone"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/adapter_my_good_order_options_edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:ems="4"
            android:gravity="center"
            android:background="@drawable/round_theme_small_bg"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_twelve"
            android:text="修改订单"/>
        <TextView
            android:id="@+id/adapter_my_good_order_options_send_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:ems="4"
            android:gravity="center"
            android:background="@drawable/round_theme_small_bg"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_twelve"
            android:text="发货"/>
        <TextView
            android:id="@+id/adapter_my_good_order_options_delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:ems="4"
            android:gravity="center"
            android:background="@drawable/round_theme_small_bg"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_twelve"
            android:text="删除订单"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/nomal_divider_height"
        android:background="@color/activity_bg_common" />
</LinearLayout>