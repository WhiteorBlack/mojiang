<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_greyf2_selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nomal_item_height"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_defalut_store"/>
        <TextView
            android:id="@+id/adapter_my_after_sale_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableRight="@mipmap/arrow_right_small"
            android:drawablePadding="10dp"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_nomal_text"
            android:text="店铺名字"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2F2F2"
        android:padding="12dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/adapter_my_after_sale_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:id="@+id/adapter_my_after_sale_desc_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_deep33_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nomal_item_height"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/adapter_my_after_sale_service_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_nomal_text"/>
        <TextView
            android:id="@+id/adapter_my_after_sale_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_nomal_text"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_grey_f2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/adapter_my_after_sale_op_details_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_border_theme_trans_1dp"
            android:ems="4"
            android:gravity="center"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_theme"
            android:text="查看详情"/>
        <TextView
            android:id="@+id/adapter_my_after_sale_op_agree_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_theme_small_bg"
            android:ems="3"
            android:gravity="center"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_white"
            android:text="同意"/>
        <TextView
            android:id="@+id/adapter_my_after_sale_op_disagree_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_theme_small_bg"
            android:ems="3"
            android:gravity="center"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_white"
            android:text="不同意"/>
        <TextView
            android:id="@+id/adapter_my_after_sale_op_finish_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_theme_small_bg"
            android:ems="4"
            android:gravity="center"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_white"
            android:text="确认收货"/>
        <TextView
            android:id="@+id/adapter_my_after_sale_op_express_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_theme_small_bg"
            android:ems="6"
            android:gravity="center"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_white"
            android:text="填写物流信息"/>
        <TextView
            android:id="@+id/adapter_my_after_sale_op_edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_theme_small_bg"
            android:ems="4"
            android:gravity="center"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_white"
            android:text="修改"/>
        <TextView
            android:id="@+id/adapter_my_after_sale_op_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_theme_small_bg"
            android:ems="4"
            android:gravity="center"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_white"
            android:text="取消"/>
    </LinearLayout>
</LinearLayout>