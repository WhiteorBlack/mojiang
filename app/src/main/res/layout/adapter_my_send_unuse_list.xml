<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_greyf2_selector"
    android:orientation="vertical"
    android:paddingTop="10dp">
    <RelativeLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/adapter_my_send_unuse_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="2018-05-19 10:02:39"
            android:textStyle="bold"
            android:textSize="@dimen/textSize_fifteen"
            android:textColor="@color/color_nomal_text"/>
        <TextView
            android:id="@+id/adapter_my_send_unuse_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/adapter_my_send_unuse_time_tv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/round_theme_small_bg"
            android:text="展示中"
            android:textSize="@dimen/textSize_twelve"
            android:textColor="@color/color_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/adapter_my_send_unuse_spec_money_tv"
            android:layout_alignBottom="@+id/adapter_my_send_unuse_spec_money_tv"
            android:layout_marginBottom="2dp"
            android:text="¥"
            android:textSize="@dimen/textSize_twelve"
            android:textColor="@color/money_red_text_color" />

        <TextView
            android:id="@+id/adapter_my_send_unuse_spec_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dp"
            android:text="0"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/money_red_text_color"
            android:textSize="@dimen/textSize_sixteen"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/adapter_my_send_unuse_spec_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/color_nomal_text"
        android:textSize="@dimen/textSize_fourteen" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/adapter_my_send_unuse_spec_img_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/adapter_my_send_unuse_spec_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/color_nomal_text"
        android:textSize="@dimen/textSize_fourteen" />
    <LinearLayout
        android:id="@+id/adapter_my_send_unuse_options_lay"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="right"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/adapter_my_send_unuse_refresh_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border_grey_trans_1dp"
            android:layout_marginLeft="3dp"
            android:paddingTop="5dp"
            android:paddingBottom="4dp"
            android:gravity="center"
            android:ems="4"
            android:textSize="@dimen/textSize_twelve"
            android:textColor="@color/color_grey_text"
            android:text="刷新"/>
        <TextView
            android:id="@+id/adapter_my_send_unuse_updown_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border_grey_trans_1dp"
            android:layout_marginLeft="3dp"
            android:paddingTop="5dp"
            android:paddingBottom="4dp"
            android:gravity="center"
            android:ems="4"
            android:textSize="@dimen/textSize_twelve"
            android:textColor="@color/color_grey_text"
            android:text="上下架"/>
        <TextView
            android:id="@+id/adapter_my_send_unuse_edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border_grey_trans_1dp"
            android:layout_marginLeft="3dp"
            android:paddingTop="5dp"
            android:paddingBottom="4dp"
            android:gravity="center"
            android:ems="4"
            android:textSize="@dimen/textSize_twelve"
            android:textColor="@color/color_grey_text"
            android:text="编辑"/>
        <TextView
            android:id="@+id/adapter_my_send_unuse_delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border_grey_trans_1dp"
            android:layout_marginLeft="3dp"
            android:paddingTop="5dp"
            android:paddingBottom="4dp"
            android:gravity="center"
            android:ems="4"
            android:textSize="@dimen/textSize_twelve"
            android:textColor="@color/color_grey_text"
            android:text="删除"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/activity_bg_common" />
</LinearLayout>