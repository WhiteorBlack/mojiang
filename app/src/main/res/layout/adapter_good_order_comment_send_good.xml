<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="15dp">
        <ImageView
            android:id="@+id/adapter_good_order_comment_iv"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_icon"/>
        <TextView
            android:id="@+id/adapter_good_order_comment_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_toRightOf="@id/adapter_good_order_comment_iv"
            android:lines="2"
            android:ellipsize="end"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_nomal_text"
            android:text="商品名字"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/adapter_good_order_comment_iv"
            android:layout_alignBottom="@id/adapter_good_order_comment_iv"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/adapter_good_order_comment_star_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/textSize_fourteen"
                android:textColor="@color/color_nomal_text"
                android:text="描述相符"/>
            <ImageView
                android:id="@+id/adapter_good_order_comment_star_one_iv"
                android:layout_width="@dimen/good_comment_star_wid"
                android:layout_height="@dimen/good_comment_star_wid"
                android:src="@drawable/selector_star"/>
            <ImageView
                android:id="@+id/adapter_good_order_comment_star_two_iv"
                android:layout_width="@dimen/good_comment_star_wid"
                android:layout_height="@dimen/good_comment_star_wid"
                android:layout_marginLeft="2dp"
                android:src="@drawable/selector_star"/>
            <ImageView
                android:id="@+id/adapter_good_order_comment_star_three_iv"
                android:layout_width="@dimen/good_comment_star_wid"
                android:layout_height="@dimen/good_comment_star_wid"
                android:layout_marginLeft="2dp"
                android:src="@drawable/selector_star"/>
            <ImageView
                android:id="@+id/adapter_good_order_comment_star_four_iv"
                android:layout_width="@dimen/good_comment_star_wid"
                android:layout_height="@dimen/good_comment_star_wid"
                android:layout_marginLeft="2dp"
                android:src="@drawable/selector_star"/>
            <ImageView
                android:id="@+id/adapter_good_order_comment_star_five_iv"
                android:layout_width="@dimen/good_comment_star_wid"
                android:layout_height="@dimen/good_comment_star_wid"
                android:layout_marginLeft="2dp"
                android:src="@drawable/selector_star"/>
            <TextView
                android:id="@+id/adapter_good_order_comment_star_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/textSize_fourteen"
                android:textColor="@color/color_nomal_text"
                android:text="非常好"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/color_white"
        android:orientation="vertical">
        <EditText
            android:id="@+id/adapter_good_order_comment_content_ev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="5dp"
            android:background="@drawable/round_grey_ee_bg"
            android:gravity="top|left"
            android:lines="5"
            android:ellipsize="end"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_nomal_text"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/adapter_good_order_comment_image_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>
</LinearLayout>