<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_add_comment_bot_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/home_recommend_shop_bg_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp">
        <TextView
            android:id="@+id/popup_add_comment_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="评论"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/popup_add_comment_send_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>
    <EditText
        android:id="@+id/popup_add_comment_content_ev"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@null"
        android:gravity="top"
        android:hint="输入评论内容..."
        android:padding="10dp"
        android:textSize="@dimen/textSize_fourteen" />
</LinearLayout>