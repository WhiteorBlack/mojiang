<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/header_choose_sort_city_tips_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_grey_f3"
        android:paddingLeft="15dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:gravity="center_vertical"
        android:text="当前城市"
        android:textColor="@color/color_nomal_text"
        android:textSize="@dimen/textSize_fifteen" />
    <TextView
        android:id="@+id/header_choose_sort_city_location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_choose_sort_city_tips_tv"
        android:layout_toRightOf="@+id/header_choose_sort_city_refresh_iv"
        android:gravity="center_vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/color_nomal_text"
        android:textSize="@dimen/textSize_fifteen"
        android:text="正在定位"/>
    <ImageView
        android:id="@+id/header_choose_sort_city_refresh_iv"
        android:layout_width="12dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:scaleType="fitCenter"
        android:layout_alignBottom="@id/header_choose_sort_city_location_tv"
        android:layout_alignTop="@id/header_choose_sort_city_location_tv"
        android:src="@mipmap/ic_location_green"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="gone"
        android:layout_below="@id/header_choose_sort_city_location_tv"
        android:background="@color/color_grey_f3" />
    <TextView
        android:id="@+id/header_choose_sort_city_all_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:layout_below="@id/header_choose_sort_city_location_tv"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:textColor="@color/color_nomal_text"
        android:textSize="@dimen/textSize_fifteen"
        android:text="全国"/>
</RelativeLayout>