<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_common">

    <LinearLayout
        android:id="@+id/acti_unuse_good_list_nav_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nomal_nav_height"
        android:visibility="gone"
        android:layout_marginTop="1dp"
        android:layout_below="@id/acti_unuse_good_list_top_lay"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/acti_unuse_good_list_nav_latest_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/acti_unuse_good_list_nav_latest_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerInParent="true"
                android:textSize="@dimen/textSize_fourteen"
                android:textColor="@color/color_nav_checked_two"
                android:text="最新的"/>
            <View
                android:id="@+id/acti_unuse_good_list_nav_latest_dv"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/color_theme"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@id/acti_unuse_good_list_nav_latest_tv"
                android:layout_alignRight="@id/acti_unuse_good_list_nav_latest_tv" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/acti_unuse_good_list_nav_nearly_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="15dp">
            <TextView
                android:id="@+id/acti_unuse_good_list_nav_nearly_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerInParent="true"
                android:textSize="@dimen/textSize_fourteen"
                android:textColor="@color/color_nav_normal_two"
                android:text="附近的"/>
            <View
                android:id="@+id/acti_unuse_good_list_nav_nearly_dv"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:visibility="invisible"
                android:background="@color/color_theme"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@id/acti_unuse_good_list_nav_nearly_tv"
                android:layout_alignRight="@id/acti_unuse_good_list_nav_nearly_tv" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/acti_unuse_good_list_nav_lay"
        android:background="@color/color_grey_f3"/>
    <LinearLayout
        android:id="@+id/acti_unuse_good_list_loading_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:layout_below="@id/acti_unuse_good_list_nav_lay"
        android:gravity="center"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
    <cn.idcby.jiajubang.view.refresh.MaterialRefreshLayout
        android:id="@+id/acti_unuse_good_list_refresh_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:layout_below="@id/acti_unuse_good_list_nav_lay">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/acti_unuse_good_list_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none"/>
    </cn.idcby.jiajubang.view.refresh.MaterialRefreshLayout>
    <TextView
        android:id="@+id/acti_unuse_good_list_null_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:paddingTop="80dp"
        android:text="暂无内容"
        android:textColor="@color/color_grey_text" />
    <ImageView
        android:id="@+id/acti_lv_to_top_iv"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        style="@style/lv_to_top_iv_style" />
</RelativeLayout>