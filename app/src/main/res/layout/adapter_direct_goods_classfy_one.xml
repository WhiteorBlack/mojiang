<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:id="@+id/item_goods_classfy_llid">
    <ImageView
        android:id="@+id/goodsimg_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/default_icon"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/goodstitle_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:text="如果你无法简介的表达你自己的想法"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:textSize="@dimen/textSize_fourteen"
        android:textColor="@color/color_nomal_text"
        android:singleLine="true"
        android:ellipsize="end"/>
    <LinearLayout
        android:id="@+id/item_good_bottom_lay"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="¥ 198.8"
            android:textColor="@color/color_money_two"
            android:textSize="@dimen/textSize_fifteen"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/goodprice_items"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="销量：0"
            android:textColor="@color/color_grey_text"
            android:textSize="@dimen/textSize_twelve"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/goodssells_items"
            android:gravity="end"/>
    </LinearLayout>
</LinearLayout>
