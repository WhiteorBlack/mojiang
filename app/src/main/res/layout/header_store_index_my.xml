<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:id="@+id/header_store_index_bg_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@mipmap/ic_store_top_bg"/>
        <LinearLayout
            android:id="@+id/header_store_index_my_search_lay"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:background="@mipmap/home_search_bg"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/search"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/textSize_twelve"
                android:textColor="@color/color_white"
                android:text="根据商品名称搜索"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/header_store_index_my_share_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="3dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/top_right_share"/>

        <LinearLayout
            android:id="@+id/header_store_index_focus_count_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/header_store_index_focus_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_fourteen"
                android:textColor="@color/color_white"
                android:text="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_twelve"
                android:textColor="@color/color_white"
                android:text="关注店铺"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/header_store_index_logo_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/header_store_index_store_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/header_store_index_logo_iv"
            android:layout_toLeftOf="@id/header_store_index_focus_count_lay"
            android:layout_alignTop="@id/header_store_index_logo_iv"
            android:layout_marginRight="10dp"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_thirteen"/>
        <TextView
            android:id="@+id/header_store_index_store_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/header_store_index_logo_iv"
            android:layout_below="@id/header_store_index_store_name_tv"
            android:background="@drawable/round_theme_small_bg"
            android:paddingTop="1dp"
            android:paddingBottom="2dp"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            android:gravity="center"
            android:ems="3"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_eight"
            android:text="企业"/>
        <TextView
            android:id="@+id/header_store_index_store_type_shop_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/header_store_index_store_type_tv"
            android:layout_below="@id/header_store_index_store_name_tv"
            android:background="@drawable/round_theme_small_bg"
            android:layout_marginLeft="5dp"
            android:paddingTop="1dp"
            android:paddingBottom="2dp"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            android:gravity="center"
            android:ems="3"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_eight"
            android:text="店铺"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nomal_item_height"
        android:background="@color/color_white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/header_store_index_op_recommend_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/header_store_index_op_recommend_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="推荐商品"
                android:gravity="center"/>
            <View
                android:id="@+id/header_store_index_op_recommend_dv"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@id/header_store_index_op_recommend_tv"
                android:layout_alignRight="@id/header_store_index_op_recommend_tv"
                android:background="@drawable/radio_theme_bot_border_3dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/header_store_index_op_all_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/header_store_index_op_all_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="全部商品"
                android:gravity="center"/>
            <View
                android:id="@+id/header_store_index_op_all_dv"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@id/header_store_index_op_all_tv"
                android:layout_alignRight="@id/header_store_index_op_all_tv"
                android:background="@drawable/radio_theme_bot_border_3dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/header_store_index_op_info_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/header_store_index_op_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="店铺资料"
                android:gravity="center"/>
            <View
                android:id="@+id/header_store_index_op_info_dv"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@id/header_store_index_op_info_tv"
                android:layout_alignRight="@id/header_store_index_op_info_tv"
                android:background="@drawable/radio_theme_bot_border_3dp"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_half_grey_f2" />
    <cn.idcby.jiajubang.view.WebViewNoScroll
        android:id="@+id/header_store_index_info_wv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/header_store_index_null_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/header_store_index_loading_pb"
            style="?android:attr/progressBarStyle"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/header_store_index_null_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_nomal_text"
            android:text="暂无商品"/>
    </LinearLayout>
</LinearLayout>