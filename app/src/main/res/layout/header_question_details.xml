<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <ImageView
            android:id="@+id/header_question_details_user_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_head_icon"/>
        <TextView
            android:id="@+id/header_question_details_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="7"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@id/header_question_details_user_iv"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_nomal_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/header_question_details_name_tv"
            android:background="@drawable/round_deep_sky_blue_small_bg"
            android:textSize="@dimen/textSize_ten"
            android:textColor="@color/color_white"
            android:text="提问者"/>
        <TextView
            android:id="@+id/header_question_details_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/header_question_details_user_iv"
            android:layout_toRightOf="@id/header_question_details_user_iv"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/textSize_ten"
            android:textColor="@color/color_grey_text"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/round_theme_small_bg"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/ic_money_pk_white"/>
            <TextView
                android:id="@+id/header_question_details_reward_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="3dp"
                android:maxLength="9"
                android:textSize="@dimen/textSize_thirteen"
                android:textColor="@color/color_white"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/header_question_details_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="@dimen/textSize_fifteen"
        android:textColor="@color/color_nomal_text"/>
    <TextView
        android:id="@+id/header_question_details_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="@dimen/textSize_fourteen"
        android:textColor="@color/color_deep33_text"/>
    <cn.idcby.jiajubang.view.FlowLayout
        android:id="@+id/header_question_details_pic_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        app:horizontalSpacing="5dp"
        app:verticalSpacing="5dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_grey_f2" />
    <TextView
        android:id="@+id/header_question_details_apply_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textSize="@dimen/textSize_fourteen"
        android:textColor="@color/color_nomal_text"/>
    <TextView
        android:id="@+id/header_question_details_comment_count_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textStyle="bold"
        android:textSize="@dimen/textSize_fourteen"
        android:textColor="@color/color_nomal_text"
        android:text="0个回答"/>

</LinearLayout>