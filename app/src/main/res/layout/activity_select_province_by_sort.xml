<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white" >
    <RelativeLayout
        android:id="@+id/head_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBar_height">
        <ImageView
            android:id="@id/back"
            style="@style/title_bar_back_style" />
        <TextView
            android:id="@+id/acti_server_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/textSize_sixteen"
            android:textColor="@color/color_nomal_text"
            android:text="选择省份"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/head_bar"
        android:background="@color/color_grey_f5"/>
    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:visibility="gone"
        android:layout_below="@id/head_bar"
        android:background="@drawable/round_search_bg"
        android:gravity="center">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/ic_search_grey"/>
        <TextView
            android:id="@+id/sh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:background="@drawable/round_search_bg"
            android:text="搜索城市"
            android:textColor="#515151"
            android:textSize="@dimen/textSize_twelve" >
        </TextView>
    </LinearLayout>
    <de.halfbit.pinnedsection.PinnedSectionListView
        android:id="@+id/acti_select_sort_city_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/head_bar"
        android:divider="@color/color_grey_f3"
        android:dividerHeight="1dp"
        android:scrollbars="none" />
    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_below="@id/head_bar"
        android:layout_alignParentRight="true"
        android:gravity="center">
        <cn.idcby.jiajubang.view.MyLetterListView
            android:id="@+id/MyLetterListView01"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>
    </LinearLayout>
</RelativeLayout>