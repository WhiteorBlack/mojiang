                    android:ellipsize="end"
                    android:inputType="numberDecimal"
                    android:maxLength="6"
                    android:gravity="center_vertical|right"
                    android:background="@color/color_trans"
                    android:hint="请输入身高"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/color_grey_text"
                    android:textSize="@dimen/textSize_fourteen" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:paddingLeft="15dp"
                android:background="@color/color_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="体重（kg）"
                    android:textColor="@color/color_nomal_text"
                    android:textSize="@dimen/textSize_fourteen" />

                <EditText
                    android:id="@+id/acti_create_resume_weight_ev"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_trans"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:inputType="numberDecimal"
                    android:maxLength="6"
                    android:hint="请输入体重"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/color_grey_text"
                    android:textSize="@dimen/textSize_fourteen" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/select_education"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/nomal_divider_height"
                android:paddingLeft="12dp"
                android:background="@color/color_white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:textSize="@dimen/textSize_ten"
                    android:textColor="@color/red"
                    android:text="*"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
