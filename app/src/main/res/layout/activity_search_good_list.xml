<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white">
    <RelativeLayout
        android:id="@+id/acti_category_good_list_top_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBar_height">
        <ImageView
            android:id="@id/back"
            style="@style/title_bar_back_style"/>
        <cn.idcby.jiajubang.view.TopBarRightView
            android:id="@+id/acti_category_good_list_right_iv"
            android:visibility="invisible"
            style="@style/unread_message_lay_style"/>
        <LinearLayout
            android:id="@+id/acti_category_good_list_search_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_search_bg"
            android:layout_toLeftOf="@id/acti_category_good_list_right_iv"
            android:layout_toRightOf="@id/back"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="@dimen/title_bar_search_margin_tb"
            android:layout_marginBottom="@dimen/title_bar_search_margin_tb"
            android:orientation="horizontal">
            <ImageView
                style="@style/nomal_search_right_iv"/>
            <TextView
                android:id="@+id/acti_category_good_list_search_key_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/textSize_twelve"
                android:textColor="@color/color_light_grey_aa_text"
                android:text="@string/nomal_search_def"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/acti_category_good_list_top_lay"
        android:background="@color/color_grey_f3"/>
    <LinearLayout
        android:id="@+id/acti_category_good_list_nav_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nomal_nav_height"
        android:layout_marginTop="1dp"
        android:layout_below="@id/acti_category_good_list_top_lay"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/acti_category_good_list_all_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/acti_category_good_list_all_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxEms="6"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="@dimen/textSize_fourteen"
                android:textColor="@color/color_nav_checked"
                android:text="综合"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/acti_category_good_list_comment_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/acti_category_good_list_comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_fourteen"
                android:textColor="@color/color_nav_normal"
                android:text="销量"/>
            <ImageView
                android:id="@+id/acti_category_good_list_comment_iv"
                android:layout_width="9dp"
                android:layout_height="13dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_arrow_up_down_nomal" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/acti_category_good_list_count_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/acti_category_good_list_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_fourteen"
                android:textColor="@color/color_nav_normal"
                android:text="价格"/>
            <ImageView
                android:id="@+id/acti_category_good_list_count_iv"
                android:layout_width="9dp"
                android:layout_height="13dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_arrow_up_down_nomal" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/acti_category_good_list_perfect_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/acti_category_good_list_perfect_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_fourteen"
                android:textColor="@color/color_nav_normal"
                android:text="好评"/>
            <ImageView
                android:id="@+id/acti_category_good_list_perfect_iv"
                android:layout_width="9dp"
                android:layout_height="13dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_arrow_up_down_nomal" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/acti_category_good_list_nav_lay"
        android:background="@color/color_grey_f3"/>
    <LinearLayout
        android:id="@+id/acti_category_good_list_loading_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:layout_below="@id/acti_category_good_list_nav_lay"
        android:gravity="center"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
    <cn.idcby.jiajubang.view.refresh.MaterialRefreshLayout
        android:id="@+id/acti_category_good_list_refresh_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_bg_common"
        android:layout_marginTop="1dp"
        android:layout_below="@id/acti_category_good_list_nav_lay">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/acti_category_good_list_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </cn.idcby.jiajubang.view.refresh.MaterialRefreshLayout>
    <TextView
        android:id="@+id/acti_category_good_list_null_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:paddingTop="80dp"
        android:text="暂无内容"
        android:textColor="@color/color_grey_text" />
</RelativeLayout>