                    android:id="@+id/acti_create_resume_name_ev"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:background="@color/white"
                    android:gravity="center_vertical|right"
                    android:hint="请输入姓名"
                    android:inputType="text"
                    android:paddingLeft="@dimen/spacing_normal"
                    android:textColor="@color/color_grey_text"
                    android:textSize="@dimen/textSize_fourteen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:paddingLeft="12dp"
                android:background="@color/color_white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:textSize="@dimen/textSize_ten"
                    android:textColor="@color/red"
                    android:text="*"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="性       别"
                    android:textColor="@color/color_nomal_text"
                    android:textSize="@dimen/textSize_fourteen" />
                <TextView
                    android:id="@+id/acti_create_resume_sex_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:paddingRight="5dp"
                    android:text="请选择"
                    android:textColor="@color/color_grey_text"
                    android:textSize="@dimen/textSize_fourteen" />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/select_birthday"
