<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_common"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBar_height"
        android:background="@color/color_white">
        <ImageView
            android:id="@id/back"
            style="@style/title_bar_back_style"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/round_border_theme_trans_1dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/radio_style_top_item_margin_tb"
            android:layout_marginBottom="@dimen/radio_style_top_item_margin_tb"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/acti_my_zg_center_type_store_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="5"
                android:gravity="center"
                android:background="@drawable/round_theme_small_bg"
                android:textSize="@dimen/textSize_fourteen"
                android:textColor="@color/color_white"
                android:text="我的店铺"/>
            <TextView
                android:id="@+id/acti_my_zg_center_type_order_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="5"
                android:gravity="center"
                android:background="@drawable/drawable_white_trans"
                android:textSize="@dimen/textSize_fourteen"
                android:textColor="@color/color_theme"
                android:text="我卖出的"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_grey_f5" />
    <cn.idcby.jiajubang.view.refresh.MaterialRefreshLayout
        android:id="@+id/acti_my_zg_center_refresh_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/acti_my_zg_center_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none"/>
    </cn.idcby.jiajubang.view.refresh.MaterialRefreshLayout>
    <LinearLayout
        android:id="@+id/acti_my_zg_center_order_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">
        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/acti_my_zg_center_order_indicator"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/white" />
        <android.support.v4.view.ViewPager
            android:id="@+id/acti_my_zg_center_order_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1px"/>
    </LinearLayout>
</LinearLayout>