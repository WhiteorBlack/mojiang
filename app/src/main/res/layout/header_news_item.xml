<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">
    <com.youth.banner.Banner
        android:id="@+id/header_news_banner_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/banner_bot_inde_style"  />
    <ImageView
        android:id="@+id/header_news_category_iv"
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:paddingRight="6dp"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_news_category"
        android:layout_below="@id/header_news_banner_lay"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/header_news_category_rv"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginRight="33dp"
        android:layout_below="@id/header_news_banner_lay"
        android:paddingLeft="10dp"/>
</RelativeLayout>