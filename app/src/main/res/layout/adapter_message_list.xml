<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_message_ct_comment_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/bg_white_greyf2_selector">
    <ImageView
        android:id="@+id/adapter_message_list_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/adapter_message_list_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:textSize="@dimen/textSize_fifteen"
        android:textColor="@color/color_nomal_text"
        android:text="评论"/>
    <TextView
        android:id="@+id/adapter_message_list_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/adapter_message_list_title_tv"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="5dp"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_grey_text"/>
    <TextView
        android:id="@+id/adapter_message_list_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_message_list_title_tv"
        android:layout_toLeftOf="@id/adapter_message_list_time_tv"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="50dp"
        android:gravity="left"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_grey_text"/>
</RelativeLayout>