<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/nomal_item_height"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/textSize_fourteen"
        android:textColor="@color/color_grey_text"
        android:text="搜索类别"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nomal_item_height"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/header_search_type_news_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_grey_text"
            android:text="资讯"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_grey_f2"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp" />
        <TextView
            android:id="@+id/header_search_type_goods_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/nomal_item_height"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_grey_text"
            android:text="商品"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_grey_f2"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp" />
        <TextView
            android:id="@+id/header_search_type_resume_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/nomal_item_height"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_grey_text"
            android:text="人才"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_grey_f2"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp" />
        <TextView
            android:id="@+id/header_search_type_unuse_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/nomal_item_height"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_grey_text"
            android:text="闲置"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nomal_item_height"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/header_search_type_install_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_grey_text"
            android:text="安装"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_grey_f2"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp" />
        <TextView
            android:id="@+id/header_search_type_fuwu_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/nomal_item_height"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_grey_text"
            android:text="服务"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_grey_f2"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp" />
        <TextView
            android:id="@+id/header_search_type_needs_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/nomal_item_height"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_grey_text"
            android:text="需求"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_grey_f2"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp" />
        <TextView
            android:id="@+id/header_search_type_question_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/nomal_item_height"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_grey_text"
            android:text="问答"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_grey_f2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/nomal_item_height"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textSize="@dimen/textSize_fourteen"
        android:textColor="@color/color_grey_text"
        android:text="热门搜索"/>
    <cn.idcby.jiajubang.view.FlowLayout
        android:id="@+id/header_search_hot_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:horizontalSpacing="10dp"
        app:verticalSpacing="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_grey_f2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nomal_item_height"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_grey_text"
            android:text="历史记录"/>
        <TextView
            android:id="@+id/header_search_clear_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_theme"
            android:text="清除"/>
    </LinearLayout>
</LinearLayout>