                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:textSize="@dimen/textSize_fourteen"
                        android:textColor="@color/color_grey_text"
                        android:text="兼职"/>
                </LinearLayout>

                <LinearLayout
