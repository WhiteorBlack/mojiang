<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/adapter_my_receive_good_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_icon"/>
    <TextView
        android:id="@+id/adapter_my_receive_good_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        app:layout_constraintLeft_toRightOf="@id/adapter_my_receive_good_iv"
        app:layout_constraintTop_toTopOf="@id/adapter_my_receive_good_iv"
        app:layout_constraintRight_toLeftOf="@+id/adapter_my_receive_good_after_sale_tv"
        android:lines="2"
        android:textSize="@dimen/textSize_thirteen"
        android:textColor="@color/color_deep33_text"/>
    <TextView
        android:id="@+id/adapter_my_receive_good_after_sale_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:ems="4"
        app:layout_constraintTop_toTopOf="@id/adapter_my_receive_good_iv"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bg_order_after_sale"
        android:textSize="@dimen/textSize_eleven"
        android:textColor="@color/color_deep33_text"
        android:text="申请售后"/>
    <TextView
        android:id="@+id/adapter_my_receive_good_after_sale_finish_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/adapter_my_receive_good_iv"
        app:layout_constraintRight_toRightOf="parent"
        android:ems="4"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="right"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="@dimen/textSize_eleven"
        android:textColor="@color/color_deep33_text"/>
    <TextView
        android:id="@+id/adapter_my_receive_good_gg_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toRightOf="@id/adapter_my_receive_good_iv"
        app:layout_constraintTop_toBottomOf="@id/adapter_my_receive_good_name_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_grey_text"/>
    <TextView
        android:id="@+id/adapter_my_receive_good_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/adapter_my_receive_good_iv"
        app:layout_constraintTop_toBottomOf="@id/adapter_my_receive_good_gg_tv"
        app:layout_constraintBottom_toBottomOf="@id/adapter_my_receive_good_iv"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="bottom"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_deep33_text"/>
    <TextView
        android:id="@+id/adapter_my_receive_good_price_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toRightOf="@id/adapter_my_receive_good_count_tv"
        app:layout_constraintTop_toBottomOf="@id/adapter_my_receive_good_gg_tv"
        app:layout_constraintBottom_toBottomOf="@id/adapter_my_receive_good_iv"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="right|bottom"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_fourteen"
        android:textColor="@color/color_money_two"/>
</android.support.constraint.ConstraintLayout>