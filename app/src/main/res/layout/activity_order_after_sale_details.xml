<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/activity_bg_common"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBar_height"
        android:background="@color/color_white">
        <ImageView
            android:id="@id/back"
            style="@style/title_bar_back_style"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/textSize_sixteen"
            android:textColor="@color/color_nomal_text"
            android:text="退款详情"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="#00ADFF"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/acti_order_after_sale_result_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/textSize_eighteen"
                    android:textColor="@color/color_white"/>
                <TextView
                    android:id="@+id/acti_order_after_sale_result_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:textSize="@dimen/textSize_eighteen"
                    android:textColor="@color/color_white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/nomal_item_height"
                android:background="@color/color_white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_nomal_text"
                    android:text="退款总金额"/>
                <TextView
                    android:id="@+id/acti_order_after_sale_all_money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="@dimen/textSize_eighteen"
                    android:textColor="@color/color_money_two"
                    android:text="￥0"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/acti_order_after_sale_history_lay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nomal_item_height"
                android:layout_marginTop="1dp"
                android:background="@color/color_white"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_nomal_text"
                    android:text="协商历史"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="8dp"
                    android:src="@mipmap/arrow_right"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="@dimen/nomal_divider_height"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:textSize="@dimen/textSize_fourteen"
                android:textColor="@color/color_nomal_text"
                android:text="退款信息"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/acti_order_after_sale_iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <TextView
                    android:id="@+id/acti_order_after_sale_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:lines="3"
                    android:ellipsize="end"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_nomal_text"/>
            </LinearLayout>
            <TextView
                android:id="@+id/acti_order_after_sale_type_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="12dp"
                android:paddingBottom="6dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/textSize_thirteen"
                android:textColor="@color/color_grey_text"
                android:text="服务类型："/>
            <TextView
                android:id="@+id/acti_order_after_sale_reason_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/textSize_thirteen"
                android:textColor="@color/color_grey_text"
                android:text="退款原因："/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/color_white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_thirteen"
                    android:textColor="@color/color_grey_text"
                    android:text="退款说明："/>
                <TextView
                    android:id="@+id/acti_order_after_sale_desc_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_thirteen"
                    android:textColor="@color/color_grey_text"/>
            </LinearLayout>
            <TextView
                android:id="@+id/acti_order_after_sale_money_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/textSize_thirteen"
                android:textColor="@color/color_grey_text"
                android:text="退款金额：￥0"/>
            <TextView
                android:id="@+id/acti_order_after_sale_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/textSize_thirteen"
                android:textColor="@color/color_grey_text"
                android:text="申请时间："/>
            <TextView
                android:id="@+id/acti_order_after_sale_number_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="6dp"
                android:paddingBottom="12dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/textSize_thirteen"
                android:textColor="@color/color_grey_text"
                android:text="退款编号："/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>