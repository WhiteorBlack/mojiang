<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white_greyf2_selector">
    <ImageView
        android:id="@+id/adapter_fans_follow_user_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_head_icon"/>
    <TextView
        android:id="@+id/adapter_fans_follow_focus_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="8dp"
        android:background="@drawable/round_border_orange_white_1dp"
        android:minEms="4"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginLeft="5dp"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_orange"
        android:text="+ 关注"/>

    <TextView
        android:id="@+id/adapter_fans_follow_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@id/adapter_fans_follow_user_iv"
        app:layout_constraintRight_toLeftOf="@id/adapter_fans_follow_focus_tv"
        app:layout_constraintBottom_toTopOf="@+id/adapter_fans_follow_desc_tv"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_fifteen"
        android:textColor="@color/color_nomal_text"/>

    <TextView
        android:id="@+id/adapter_fans_follow_desc_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/adapter_fans_follow_user_iv"
        app:layout_constraintRight_toLeftOf="@id/adapter_fans_follow_focus_tv"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_grey_text"/>

    <TextView
        android:id="@+id/adapter_fans_follow_location_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/adapter_fans_follow_desc_tv"
        app:layout_constraintLeft_toRightOf="@id/adapter_fans_follow_user_iv"
        app:layout_constraintRight_toLeftOf="@id/adapter_fans_follow_focus_tv"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_grey_text"/>
</android.support.constraint.ConstraintLayout>