<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapter_home_recommend_child_main_lay"
    android:background="@color/activity_bg_common"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/adapter_home_recommend_child_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/textSize_thirteen"
        android:singleLine="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:textColor="@color/color_nomal_text"
        android:textStyle="bold"
        android:text="店铺名字"/>
    <TextView
        android:id="@+id/adapter_home_recommend_child_store_in_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adapter_home_recommend_child_title_tv"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="5dp"
        android:drawablePadding="4dp"
        android:drawableRight="@mipmap/arrow_right_small"
        android:textSize="@dimen/textSize_ten"
        android:textColor="@color/color_grey_text"
        android:text="进入店铺"/>
    <TextView
        android:id="@+id/adapter_home_recommend_child_count_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/adapter_home_recommend_child_store_in_tv"
        app:layout_constraintTop_toBottomOf="@id/adapter_home_recommend_child_title_tv"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:textSize="@dimen/textSize_ten"
        android:textColor="@color/color_grey_text"
        android:text="共10000件商品"/>
    <ImageView
        android:id="@+id/adapter_home_recommend_child_top_left_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/color_white"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/adapter_home_recommend_child_store_in_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/adapter_home_recommend_child_top_right_one_lay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="3dp"
        android:background="@color/color_white"
        app:layout_constraintTop_toTopOf="@id/adapter_home_recommend_child_top_left_iv"
        app:layout_constraintBottom_toBottomOf="@id/adapter_home_recommend_child_top_left_iv"
        app:layout_constraintLeft_toRightOf="@id/adapter_home_recommend_child_top_left_iv"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>