<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">
    <TextView
        android:id="@+id/adapter_good_details_service_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:textSize="@dimen/textSize_fourteen"
        android:textColor="@color/color_nomal_text"/>
    <TextView
        android:id="@+id/adapter_good_details_service_desc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_good_details_service_title_tv"
        android:gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_nomal_text"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/adapter_good_details_service_title_tv"
        android:layout_alignBottom="@id/adapter_good_details_service_title_tv"
        android:src="@drawable/ic_good_dt_sp_tips"/>
</RelativeLayout>