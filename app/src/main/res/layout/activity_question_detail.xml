<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_common"
    android:orientation="vertical">
    <TextView
        android:id="@+id/acti_question_details_answer_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nomal_submit_height"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_theme_small_bg"
        android:gravity="center"
        android:textSize="@dimen/textSize_fourteen"
        android:textColor="@color/color_white"
        android:text="我要回答"/>
    <ListView
        android:id="@+id/acti_question_details_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/acti_question_details_answer_tv"
        android:divider="@color/color_trans"
        android:dividerHeight="1dp"
        android:overScrollMode="never"
        android:scrollbars="none" />
    <RelativeLayout
        android:id="@+id/acti_question_details_answer_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/color_half_black">
        <LinearLayout
            android:id="@+id/acti_question_details_answer_edit_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/color_white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_nomal_text"
                    android:text="我的回答"/>
                <ImageView
                    android:id="@+id/acti_question_details_answer_close_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="8dp"
                    android:padding="7dp"
                    android:src="@mipmap/ic_publish_close"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/color_grey_f2" />
            <EditText
                android:id="@+id/acti_question_details_answer_sub_ev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_grey_f2_bg"
                android:gravity="top|left"
                android:padding="5dp"
                android:lines="6"
                android:ellipsize="end"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/textSize_fifteen"
                android:textColor="@color/color_nomal_text"/>
            <EditText
                android:id="@+id/acti_question_details_answer_focus_ev"
                android:layout_width="0dp"
                android:layout_height="0dp">
                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/acti_question_details_answer_sub_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/round_theme_small_bg"
                android:gravity="center"
                android:textSize="@dimen/textSize_fourteen"
                android:textColor="@color/color_white"
                android:text="提交回答"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/acti_lv_to_top_iv"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="20dp"
        style="@style/lv_to_top_iv_style"/>
</RelativeLayout>
