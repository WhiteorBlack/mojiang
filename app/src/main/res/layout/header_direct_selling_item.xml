<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.youth.banner.Banner
        android:id="@+id/acti_direct_selling_banner_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/banner_bot_inde_style" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <LinearLayout
            android:id="@+id/acti_direct_selling_search_lay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/shape_gray_search_bg"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="@dimen/index_search_margin_tb"
            android:paddingTop="@dimen/index_search_margin_tb">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/nomal_search_def"
                android:textColor="@color/color_light_grey_aa_text"
                android:textSize="@dimen/textSize_twelve" />
            <ImageView
                style="@style/nomal_search_right_iv"/>
        </LinearLayout>
        <TextView
            android:id="@+id/acti_direct_selling_open_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_green_with_circle_corner"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="@dimen/index_search_margin_tb"
            android:paddingTop="@dimen/index_search_margin_tb"
            android:text="我要开店"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_twelve" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/header_direct_selling_category_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/header_direct_selling_mid_ban_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/nomal_divider_height"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_icon"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:background="@color/white"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/title_name_item_one"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:text="拼单更划算"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_nomal_text"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/title_name_item_one_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:drawablePadding="5dp"
            android:layout_marginLeft="10dp"
            android:drawableRight="@mipmap/arrow_right_small"
            android:text="更多产品"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_grey_text"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/header_spec_item_one_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:weightSum="3"
        android:paddingBottom="5dp"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/header_direct_selling_pindan_left_lay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/header_direct_selling_pindan_left_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/header_direct_selling_pindan_left_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/header_direct_selling_pindan_left_iv"
                android:textSize="@dimen/textSize_twelve"
                android:textColor="@color/color_grey_text"
                android:text="拼单价"/>
            <TextView
                android:id="@+id/header_direct_selling_pindan_left_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_below="@id/header_direct_selling_pindan_left_iv"
                android:layout_toRightOf="@id/header_direct_selling_pindan_left_tv"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/textSize_twelve"
                android:textColor="@color/color_money_two"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/header_direct_selling_pindan_mid_lay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="1dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/header_direct_selling_pindan_mid_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/header_direct_selling_pindan_mid_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/header_direct_selling_pindan_mid_iv"
                android:textSize="@dimen/textSize_twelve"
                android:textColor="@color/color_grey_text"
                android:text="拼单价"/>
            <TextView
                android:id="@+id/header_direct_selling_pindan_mid_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_below="@id/header_direct_selling_pindan_mid_iv"
                android:layout_toRightOf="@id/header_direct_selling_pindan_mid_tv"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/textSize_twelve"
                android:textColor="@color/color_money_two"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/header_direct_selling_pindan_right_lay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="1dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/header_direct_selling_pindan_right_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/header_direct_selling_pindan_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/header_direct_selling_pindan_right_iv"
                android:textSize="@dimen/textSize_twelve"
                android:textColor="@color/color_grey_text"
                android:text="拼单价"/>
            <TextView
                android:id="@+id/header_direct_selling_pindan_right_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_below="@id/header_direct_selling_pindan_right_iv"
                android:layout_toRightOf="@id/header_direct_selling_pindan_right_tv"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/textSize_twelve"
                android:textColor="@color/color_money_two"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingRight="10dp"
        android:layout_marginTop="@dimen/nomal_divider_height"
        android:background="@color/white"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/title_name_item_hot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:text="热销爆款"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_nomal_text"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/title_name_item_hot_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:drawablePadding="5dp"
            android:layout_marginLeft="10dp"
            android:drawableRight="@mipmap/arrow_right_small"
            android:text="更多产品"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_grey_text"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/adapter_direct_good_hot_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:background="@color/color_white"
        android:weightSum="3"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/adapter_direct_good_hot_top_left_iv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/adapter_direct_good_hot_top_right_one_iv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="1dp"/>
        <ImageView
            android:id="@+id/adapter_direct_good_hot_top_right_two_iv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="1dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingRight="10dp"
        android:layout_marginTop="@dimen/nomal_divider_height"
        android:background="@color/white"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/title_name_item_news"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:text="新品上架"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_nomal_text"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/title_name_item_news_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:drawablePadding="5dp"
            android:layout_marginLeft="10dp"
            android:drawableRight="@mipmap/arrow_right_small"
            android:text="更多产品"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_grey_text"/>
    </RelativeLayout>
    <cn.idcby.jiajubang.view.AutofitViewPager
        android:id="@+id/header_direct_selling_latest_good_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"/>
    <LinearLayout
        android:id="@+id/header_direct_selling_latest_point_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingRight="10dp"
        android:layout_marginTop="@dimen/nomal_divider_height"
        android:background="@color/white"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/title_name_item_store"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:text="店铺推荐"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_nomal_text"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/title_name_item_store_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:drawablePadding="5dp"
            android:layout_marginLeft="10dp"
            android:drawableRight="@mipmap/arrow_right_small"
            android:text="更多店铺"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_grey_text"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/header_direct_selling_store_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/header_direct_selling_store_one_lay"
            android:background="@color/activity_bg_common"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/header_direct_selling_store_one_title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="@dimen/textSize_thirteen"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:textColor="@color/color_nomal_text"/>
            <TextView
                android:id="@+id/header_direct_selling_store_one_store_in_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/header_direct_selling_store_one_title_tv"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="5dp"
                android:drawablePadding="4dp"
                android:drawableRight="@mipmap/arrow_right_small"
                android:textSize="@dimen/textSize_ten"
                android:textColor="@color/color_grey_text"
                android:text="进入店铺"/>
            <TextView
                android:id="@+id/header_direct_selling_store_one_count_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/header_direct_selling_store_one_store_in_tv"
                app:layout_constraintTop_toBottomOf="@id/header_direct_selling_store_one_title_tv"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:textSize="@dimen/textSize_ten"
                android:textColor="@color/color_grey_text"
                android:text="共0件商品"/>
            <ImageView
                android:id="@+id/header_direct_selling_store_one_top_left_iv"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:background="@color/color_white"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/header_direct_selling_store_one_store_in_tv"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <ImageView
                android:id="@+id/header_direct_selling_store_one_top_right_one_lay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="3dp"
                android:background="@color/color_white"
                app:layout_constraintTop_toTopOf="@id/header_direct_selling_store_one_top_left_iv"
                app:layout_constraintBottom_toBottomOf="@id/header_direct_selling_store_one_top_left_iv"
                app:layout_constraintLeft_toRightOf="@id/header_direct_selling_store_one_top_left_iv"
                app:layout_constraintRight_toRightOf="parent" />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/header_direct_selling_store_two_lay"
            android:background="@color/activity_bg_common"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/header_direct_selling_store_two_title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="@dimen/textSize_thirteen"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:textColor="@color/color_nomal_text"/>
            <TextView
                android:id="@+id/header_direct_selling_store_two_store_in_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/header_direct_selling_store_two_title_tv"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="5dp"
                android:drawablePadding="4dp"
                android:drawableRight="@mipmap/arrow_right_small"
                android:textSize="@dimen/textSize_ten"
                android:textColor="@color/color_grey_text"
                android:text="进入店铺"/>
            <TextView
                android:id="@+id/header_direct_selling_store_two_count_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/header_direct_selling_store_two_store_in_tv"
                app:layout_constraintTop_toBottomOf="@id/header_direct_selling_store_two_title_tv"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:textSize="@dimen/textSize_ten"
                android:textColor="@color/color_grey_text"
                android:text="共0件商品"/>
            <ImageView
                android:id="@+id/header_direct_selling_store_two_top_left_iv"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:background="@color/color_white"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/header_direct_selling_store_two_store_in_tv"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <ImageView
                android:id="@+id/header_direct_selling_store_two_top_right_one_lay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="3dp"
                android:background="@color/color_white"
                app:layout_constraintTop_toTopOf="@id/header_direct_selling_store_two_top_left_iv"
                app:layout_constraintBottom_toBottomOf="@id/header_direct_selling_store_two_top_left_iv"
                app:layout_constraintLeft_toRightOf="@id/header_direct_selling_store_two_top_left_iv"
                app:layout_constraintRight_toRightOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingRight="10dp"
        android:layout_marginTop="@dimen/nomal_divider_height"
        android:background="@color/white"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/title_name_item_sells"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:text="精品推荐"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_nomal_text"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/title_name_item_sells_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:drawablePadding="5dp"
            android:layout_marginLeft="10dp"
            android:drawableRight="@mipmap/arrow_right_small"
            android:text="更多产品"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_grey_text"/>
    </RelativeLayout>
</LinearLayout>