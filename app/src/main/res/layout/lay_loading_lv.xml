<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_common">
    <cn.idcby.jiajubang.view.refresh.MaterialRefreshLayout
        android:id="@+id/lay_loading_lv_refresh_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/lay_loading_lv_list_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:dividerHeight="1dp"
            android:divider="@color/color_trans" />
    </cn.idcby.jiajubang.view.refresh.MaterialRefreshLayout>
    <ProgressBar
        android:id="@+id/lay_loading_lv_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true" />
    <TextView
        android:id="@+id/lay_loading_lv_null_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/progressBar"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="暂无内容"
        android:textColor="@color/color_nomal_text" />
</RelativeLayout>