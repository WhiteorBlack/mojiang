<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBar_height"
        android:background="@color/color_white">
        <ImageView
            android:id="@id/back"
            style="@style/title_bar_back_style"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/textSize_sixteen"
            android:textColor="@color/color_nomal_text"
            android:text="取消订单"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_grey_f2" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:background="@color/color_white"
                android:paddingLeft="15dp"
                android:textSize="@dimen/textSize_fourteen"
                android:textColor="@color/color_deep33_text"
                android:text="取消原因"/>
            <EditText
                android:id="@+id/acti_my_need_order_cancel_content_ev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/color_white"
                android:lines="7"
                android:ellipsize="end"
                android:padding="15dp"
                android:gravity="top"
                android:textSize="@dimen/textSize_thirteen"
                android:textColor="@color/color_deep55_text"
                android:hint="描述一下您的取消原因"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/acti_my_need_order_cancel_pic_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>
            <TextView
                android:id="@+id/acti_my_need_order_cancel_sub_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nomal_submit_height"
                android:layout_margin="15dp"
                android:background="@drawable/round_theme_small_bg"
                android:gravity="center"
                android:textSize="@dimen/textSize_sixteen"
                android:textColor="@color/color_white"
                android:text="提交"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>