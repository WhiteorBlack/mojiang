<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/header_message_ct_system_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/bg_white_greyf2_selector">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_msg_ct_sys"/>
        <TextView
            android:id="@+id/header_message_ct_system_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textSize="@dimen/textSize_fifteen"
            android:textColor="@color/color_nomal_text"
            android:text="系统消息"/>
        <TextView
            android:id="@+id/header_message_ct_system_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/header_message_ct_system_title_tv"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/textSize_twelve"
            android:textColor="@color/color_grey_text"/>
        <TextView
            android:id="@+id/header_message_ct_system_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_message_ct_system_title_tv"
            android:layout_toLeftOf="@id/header_message_ct_system_time_tv"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="50dp"
            android:gravity="left"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/textSize_twelve"
            android:textColor="@color/color_grey_text"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_grey_f2" />
    <RelativeLayout
        android:id="@+id/header_message_ct_order_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/bg_white_greyf2_selector">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_msg_ct_order"/>
        <TextView
            android:id="@+id/header_message_ct_order_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textSize="@dimen/textSize_fifteen"
            android:textColor="@color/color_nomal_text"
            android:text="订单消息"/>
        <TextView
            android:id="@+id/header_message_ct_order_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/textSize_twelve"
            android:textColor="@color/color_grey_text"/>
        <TextView
            android:id="@+id/header_message_ct_order_count_tv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:layout_below="@id/header_message_ct_order_title_tv"
            style="@style/unread_message_count_tv_style"/>
        <TextView
            android:id="@+id/header_message_ct_order_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_message_ct_order_title_tv"
            android:layout_toLeftOf="@id/header_message_ct_order_count_tv"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="50dp"
            android:gravity="left"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/textSize_twelve"
            android:textColor="@color/color_grey_text"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_grey_f2" />
    <RelativeLayout
        android:id="@+id/header_message_ct_circle_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/bg_white_greyf2_selector">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_msg_ct_circle"/>
        <TextView
            android:id="@+id/header_message_ct_circle_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textSize="@dimen/textSize_fifteen"
            android:textColor="@color/color_nomal_text"
            android:text="互动消息"/>
        <TextView
            android:id="@+id/header_message_ct_circle_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/textSize_twelve"
            android:textColor="@color/color_grey_text"/>
        <TextView
            android:id="@+id/header_message_ct_circle_count_tv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:layout_below="@id/header_message_ct_circle_title_tv"
            style="@style/unread_message_count_tv_style"/>
        <TextView
            android:id="@+id/header_message_ct_circle_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_message_ct_circle_title_tv"
            android:layout_toLeftOf="@id/header_message_ct_circle_count_tv"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="50dp"
            android:gravity="left"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/textSize_twelve"
            android:textColor="@color/color_grey_text"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_grey_f2" />
    <RelativeLayout
        android:id="@+id/header_message_ct_comment_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/bg_white_greyf2_selector">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_msg_ct_comment"/>
        <TextView
            android:id="@+id/header_message_ct_comment_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textSize="@dimen/textSize_fifteen"
            android:textColor="@color/color_nomal_text"
            android:text="评论消息"/>
        <TextView
            android:id="@+id/header_message_ct_comment_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/textSize_twelve"
            android:textColor="@color/color_grey_text"/>
        <TextView
            android:id="@+id/header_message_ct_comment_count_tv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:layout_below="@id/header_message_ct_comment_title_tv"
            style="@style/unread_message_count_tv_style"/>
        <TextView
            android:id="@+id/header_message_ct_comment_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_message_ct_comment_title_tv"
            android:layout_toLeftOf="@id/header_message_ct_comment_count_tv"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="50dp"
            android:gravity="left"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/textSize_twelve"
            android:textColor="@color/color_grey_text"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_grey_f2" />
</LinearLayout>