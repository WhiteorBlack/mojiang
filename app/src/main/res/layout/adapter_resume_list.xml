<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_greyf2_selector"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">
    <ImageView
        android:id="@+id/adapter_resume_list_iv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/default_head_icon"/>
    <LinearLayout
        android:id="@+id/adapter_resume_list_support_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            style="@style/nomal_item_bot_ic_style"
            android:src="@mipmap/ic_support_lv_nomal"/>
        <TextView
            android:id="@+id/adapter_resume_list_support_count_tv"
            style="@style/nomal_item_bot_tv_style"/>
    </LinearLayout>
    <TextView
        android:id="@+id/adapter_resume_list_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/adapter_resume_list_support_lay"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="#B0B0B0"/>

    <LinearLayout
        android:id="@+id/adapter_resume_list_title_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/adapter_resume_list_iv"
        android:layout_toLeftOf="@id/adapter_resume_list_time_tv"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/adapter_resume_list_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingBottom="1dp"
            android:textSize="@dimen/textSize_ten"/>
        <TextView
            android:id="@+id/adapter_resume_list_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_nomal_text"/>
    </LinearLayout>
    <TextView
        android:id="@+id/adapter_resume_list_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/adapter_resume_list_iv"
        android:layout_toLeftOf="@+id/adapter_resume_list_details_tv"
        android:layout_below="@id/adapter_resume_list_title_lay"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_grey_text"/>
    <TextView
        android:id="@+id/adapter_resume_list_job_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/adapter_resume_list_iv"
        android:layout_below="@id/adapter_resume_list_content_tv"
        android:maxEms="8"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_grey_text"/>
    <TextView
        android:id="@+id/adapter_resume_list_job_money_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/adapter_resume_list_job_name_tv"
        android:layout_toLeftOf="@+id/adapter_resume_list_details_tv"
        android:layout_below="@id/adapter_resume_list_content_tv"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="#FF0F00"/>

    <TextView
        android:id="@+id/adapter_resume_list_details_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/round_theme_small_bg"
        android:ems="3"
        android:gravity="center"
        android:paddingTop="2dp"
        android:paddingBottom="3dp"
        android:layout_alignBottom="@id/adapter_resume_list_iv"
        android:textSize="@dimen/textSize_thirteen"
        android:textColor="@color/color_white"
        android:text="查看"/>
</RelativeLayout>