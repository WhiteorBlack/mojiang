<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/frag_me_top_bg_iv"
            android:layout_width="0dp"
            android:layout_height="250dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/activity_bg_common"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_me_top_bg_iv" />
        <View
            android:id="@+id/frag_me_top_ct_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="@id/frag_me_top_bg_iv"
            app:layout_constraintRight_toRightOf="@id/frag_me_top_bg_iv"
            app:layout_constraintBottom_toBottomOf="@id/frag_me_top_bg_iv"
            app:layout_constraintTop_toTopOf="@id/frag_me_top_bg_iv" />
        <ImageView
            android:id="@+id/frag_me_user_icon_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toLeftOf="@id/frag_me_top_ct_view"
            app:layout_constraintBottom_toTopOf="@id/frag_me_top_ct_view"
            android:src="@mipmap/default_head_icon"/>
        <TextView
            android:id="@+id/frag_me_user_set_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:textSize="@dimen/textSize_fourteen"
            app:layout_constraintRight_toRightOf="@id/frag_me_top_ct_view"
            app:layout_constraintTop_toTopOf="@id/frag_me_user_icon_iv"
            android:textColor="@color/color_white"
            android:text="设置"/>

        <TextView
            android:id="@+id/frag_me_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:maxEms="8"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintLeft_toRightOf="@id/frag_me_user_icon_iv"
            app:layout_constraintTop_toTopOf="@id/frag_me_user_icon_iv"
            android:textSize="@dimen/textSize_fifteen"
            android:textColor="@color/color_white"/>
        <ImageView
            android:id="@+id/frag_me_user_v_iv"
            android:layout_width="10dp"
            android:layout_height="13dp"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="@id/frag_me_user_name_tv"
            app:layout_constraintLeft_toRightOf="@id/frag_me_user_name_tv"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="3dp"
            android:src="@mipmap/ic_cirlce_user_v"/>
        <TextView
            android:id="@+id/frag_me_my_apply_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@id/frag_me_top_ct_view"
            app:layout_constraintBottom_toBottomOf="@id/frag_me_user_icon_iv"
            android:background="@drawable/me_apply_bg"
            android:paddingBottom="4dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:text="V  我的认证"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_thirteen" />
        <LinearLayout
            android:id="@+id/frag_me_user_exp_lay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@id/frag_me_user_icon_iv"
            app:layout_constraintLeft_toRightOf="@id/frag_me_user_icon_iv"
            app:layout_constraintRight_toLeftOf="@id/frag_me_my_apply_tv"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/help_value" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="信誉值"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_twelve" />
            <TextView
                android:id="@+id/frag_me_user_exp_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_twelve" />
        </LinearLayout>

        <View
            android:id="@+id/frag_me_top_bt_ct_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="@id/frag_me_top_bg_iv"
            app:layout_constraintRight_toRightOf="@id/frag_me_top_bg_iv"
            app:layout_constraintBottom_toBottomOf="@id/frag_me_top_bg_iv"
            app:layout_constraintTop_toTopOf="@+id/frag_me_top_ct_view"
            app:layout_constraintVertical_bias="0.75"
            tools:layout_editor_absoluteX="0dp" />

        <LinearLayout
            android:id="@+id/frag_me_fucus_lay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="@id/frag_me_top_bg_iv"
            app:layout_constraintRight_toRightOf="@id/frag_me_top_bg_iv"
            app:layout_constraintTop_toTopOf="@id/frag_me_top_ct_view"
            app:layout_constraintBottom_toBottomOf="@id/frag_me_top_bt_ct_view"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/frag_me_my_collection_lay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/frag_me_my_collection_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/textSize_fifteen"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_white"
                    android:text="我的收藏"
                    android:textSize="@dimen/textSize_twelve" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/frag_me_my_focus_member_lay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/frag_me_my_focus_member_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/textSize_fifteen"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_white"
                    android:text="关注的人"
                    android:textSize="@dimen/textSize_twelve" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/frag_me_my_focus_store_lay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/frag_me_my_focus_store_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/textSize_fifteen"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_white"
                    android:text="关注的店铺"
                    android:textSize="@dimen/textSize_twelve" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/frag_me_my_fans_lay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/frag_me_my_fans_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/textSize_fifteen"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_white"
                    android:text="我的粉丝"
                    android:textSize="@dimen/textSize_twelve" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frag_me_money_lay"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@id/frag_me_top_bt_ct_view"
            app:layout_constraintLeft_toLeftOf="@id/frag_me_top_bg_iv"
            app:layout_constraintRight_toRightOf="@id/frag_me_top_bg_iv"
            android:background="@drawable/round_white_10_bg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/frag_me_my_money_lay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/money" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="我的余额"
                    android:textSize="@dimen/textSize_twelve" />
            </LinearLayout>

            <View
                android:layout_width="0.7dp"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/line_gray" />

            <LinearLayout
                android:id="@+id/frag_me_my_money_bang_lay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/bangbi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="我的积分"
                    android:textSize="@dimen/textSize_twelve" />

            </LinearLayout>

            <View
                android:layout_width="0.7dp"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/line_gray" />

            <LinearLayout
                android:id="@+id/frag_me_my_pay_bonds_lay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/baozheng" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="保证金"
                    android:textSize="@dimen/textSize_twelve" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frag_me_order_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/frag_me_money_lay"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/round_white_10_bg"
            android:orientation="vertical"
            android:gravity="center">
            <!--<net.lucode.hackware.magicindicator.MagicIndicator-->
            <!--android:id="@+id/frag_me_order_indicator"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="@dimen/nomal_indicator_height" />-->
            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.7dp"-->
            <!--android:background="@color/color_grey_f2" />-->
            <!--<android.support.v4.view.ViewPager-->
            <!--android:id="@+id/frag_me_order_vp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="80dp"-->
            <!--android:layout_marginTop="0.7dp"/>-->
            <LinearLayout
                android:id="@+id/frag_me_order_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="3dp"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_nomal_text"
                    android:text="我的订单"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_twelve"
                    android:textColor="@color/color_grey_text"
                    android:text="查看全部订单"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="2dp"
                    android:src="@mipmap/arrow_right"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_grey_f2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/frag_me_order_first_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:paddingTop="10dp"
                            android:src="@mipmap/dfk" />
                        <TextView
                            android:id="@+id/frag_me_order_first_count_tv"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="right"
                            android:background="@drawable/shape_circle_red_border"
                            android:visibility="gone"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="@dimen/textSize_ten"
                            android:textColor="@color/color_red"
                            android:text="0"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="待付款"
                        android:textColor="@color/color_grey_text"
                        android:textSize="@dimen/textSize_twelve" />
                </LinearLayout>

                <View
                    android:layout_width="0.7dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/line_gray" />

                <LinearLayout
                    android:id="@+id/frag_me_order_second_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:paddingTop="10dp"
                            android:src="@mipmap/dfw" />
                        <TextView
                            android:id="@+id/frag_me_order_second_count_tv"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="right"
                            android:visibility="gone"
                            android:background="@drawable/shape_circle_red_border"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="@dimen/textSize_ten"
                            android:textColor="@color/color_red"
                            android:text="0"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="待发货"
                        android:textColor="@color/color_grey_text"
                        android:textSize="@dimen/textSize_twelve"/>
                </LinearLayout>

                <View
                    android:layout_width="0.7dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/line_gray" />

                <LinearLayout
                    android:id="@+id/frag_me_order_fifth_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:paddingTop="10dp"
                            android:src="@mipmap/dsh" />
                        <TextView
                            android:id="@+id/frag_me_order_fifth_count_tv"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="right"
                            android:visibility="gone"
                            android:background="@drawable/shape_circle_red_border"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="@dimen/textSize_ten"
                            android:textColor="@color/color_red"
                            android:text="0"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="待收货"
                        android:textColor="@color/color_grey_text"
                        android:textSize="@dimen/textSize_twelve" />
                </LinearLayout>
                <View
                    android:layout_width="0.7dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/line_gray" />
                <LinearLayout
                    android:id="@+id/frag_me_order_third_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:paddingTop="10dp"
                            android:src="@mipmap/dpj" />
                        <TextView
                            android:id="@+id/frag_me_order_third_count_tv"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="right"
                            android:visibility="gone"
                            android:background="@drawable/shape_circle_red_border"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="@dimen/textSize_ten"
                            android:textColor="@color/color_red"
                            android:text="0"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="待评价"
                        android:textColor="@color/color_grey_text"
                        android:textSize="@dimen/textSize_twelve"/>
                </LinearLayout>
                <View
                    android:layout_width="0.7dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/line_gray" />
                <LinearLayout
                    android:id="@+id/frag_me_order_fourth_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:paddingTop="10dp"
                            android:src="@mipmap/ic_order_state_after" />
                        <TextView
                            android:id="@+id/frag_me_order_fourth_count_tv"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="right"
                            android:visibility="gone"
                            android:background="@drawable/shape_circle_red_border"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="@dimen/textSize_ten"
                            android:textColor="@color/color_red"
                            android:text="0"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="售后"
                        android:textColor="@color/color_grey_text"
                        android:textSize="@dimen/textSize_twelve"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/frag_me_option_adv_par_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/frag_me_order_lay"
            android:background="@drawable/round_white_10_top_bg"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/frag_me_option_adv_lay"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">
                <cn.idcby.jiajubang.view.RoundFramLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    app:radius="10dp"
                    app:layout_constraintTop_toBottomOf="@id/frag_me_order_lay"
                    android:background="@drawable/round_white_10_top_bg">
                    <com.youth.banner.Banner
                        android:id="@+id/frag_me_option_adv_banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </cn.idcby.jiajubang.view.RoundFramLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/frag_me_option_top_lay"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_white"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/frag_me_option_zhigong_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
