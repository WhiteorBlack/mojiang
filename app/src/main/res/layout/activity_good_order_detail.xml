<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/color_white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/nomal_item_height"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_nomal_text"
                    android:text="订单状态"/>
                <TextView
                    android:id="@+id/acti_good_order_dt_state_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|right"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_grey_text"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/activity_bg_common" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/nomal_item_height"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_nomal_text"
                    android:text="订单编号"/>
                <TextView
                    android:id="@+id/acti_good_order_dt_num_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|right"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_grey_text"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/nomal_divider_height"
                android:background="@color/activity_bg_common" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/ic_location_green"/>
                <TextView
                    android:id="@+id/acti_good_order_dt_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_nomal_text"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/acti_good_order_dt_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/acti_good_order_dt_name_tv"
                    android:maxLength="20"
                    android:minEms="6"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_nomal_text"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/acti_good_order_dt_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/acti_good_order_dt_name_tv"
                    android:textSize="@dimen/textSize_twelve"
                    android:textColor="@color/color_grey_text"/>
            </RelativeLayout>
            <View
                android:id="@+id/acti_good_order_dt_store_dv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nomal_divider_height"
                android:background="@color/activity_bg_common"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/acti_good_order_dt_store_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/ic_defalut_store"/>
                <TextView
                    android:id="@+id/acti_good_order_dt_store_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_nomal_text"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/acti_good_order_dt_good_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/activity_bg_common"
                android:overScrollMode="never"
                android:scrollbars="none" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/nomal_item_height"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_nomal_text"
                    android:text="买家留言"/>
                <TextView
                    android:id="@+id/acti_good_order_dt_other_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/nomal_item_height"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|right"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_grey_text"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/nomal_divider_height"
                android:background="@color/activity_bg_common" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/nomal_item_height"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_nomal_text"
                    android:text="下单时间"/>
                <TextView
                    android:id="@+id/acti_good_order_dt_time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|right"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_grey_text"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/activity_bg_common" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/nomal_item_height"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_nomal_text"
                    android:text="订单金额"/>
                <TextView
                    android:id="@+id/acti_good_order_dt_money_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|right"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_money_two"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/activity_bg_common" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/nomal_item_height"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_nomal_text"
                    android:text="配送方式"/>
                <TextView
                    android:id="@+id/acti_good_order_dt_delivery_type_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/nomal_item_height"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|right"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_grey_text"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/activity_bg_common" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/nomal_item_height"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_nomal_text"
                    android:text="运费"/>
                <TextView
                    android:id="@+id/acti_good_order_dt_delivery_money_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/nomal_item_height"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|right"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_grey_text"/>
            </LinearLayout>
            <View
                android:id="@+id/acti_good_order_dt_express_name_dv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nomal_divider_height"
                android:visibility="gone"
                android:background="@color/activity_bg_common" />
            <LinearLayout
                android:id="@+id/acti_good_order_dt_express_name_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/nomal_item_height"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_nomal_text"
                    android:text="快递/物流公司"/>
                <TextView
                    android:id="@+id/acti_good_order_dt_express_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/nomal_item_height"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|right"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_grey_text"/>
            </LinearLayout>
            <View
                android:id="@+id/acti_good_order_dt_express_num_dv"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/activity_bg_common" />
            <LinearLayout
                android:id="@+id/acti_good_order_dt_express_num_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/nomal_item_height"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_nomal_text"
                    android:text="快递/物流单号"/>
                <TextView
                    android:id="@+id/acti_good_order_dt_express_num_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/nomal_item_height"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center_vertical|right"
                    android:textSize="@dimen/textSize_fourteen"
                    android:textColor="@color/color_grey_text"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/activity_bg_common" />
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/activity_bg_common" />
    <LinearLayout
        android:id="@+id/acti_good_order_dt_options_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nomal_item_height"
        android:visibility="gone"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/acti_good_order_dt_options_pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:ems="4"
            android:gravity="center"
            android:background="@drawable/round_theme_small_bg"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_thirteen"
            android:text="付款"/>
        <TextView
            android:id="@+id/acti_good_order_dt_options_edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:ems="4"
            android:gravity="center"
            android:background="@drawable/round_theme_small_bg"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_thirteen"
            android:text="修改订单"/>
        <TextView
            android:id="@+id/acti_good_order_dt_options_send_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:ems="4"
            android:gravity="center"
            android:background="@drawable/round_theme_small_bg"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_thirteen"
            android:text="发货"/>
        <TextView
            android:id="@+id/acti_good_order_dt_options_finish_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:ems="4"
            android:gravity="center"
            android:background="@drawable/round_theme_small_bg"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_thirteen"
            android:text="确认收货"/>
        <TextView
            android:id="@+id/acti_good_order_dt_options_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:ems="4"
            android:gravity="center"
            android:background="@drawable/round_theme_small_bg"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_thirteen"
            android:text="取消"/>
        <TextView
            android:id="@+id/acti_good_order_dt_options_comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:ems="4"
            android:gravity="center"
            android:background="@drawable/round_theme_small_bg"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_thirteen"
            android:text="评价"/>
    </LinearLayout>
</LinearLayout>