<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_greyf2_selector"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">
    <ImageView
        android:id="@+id/adapter_vic_user_head_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/default_head_icon"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/adapter_vic_user_focus_tv"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/round_focus_bg_nomal"
        android:ems="4"
        android:gravity="center"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_theme"
        android:text="+关注"/>

    <TextView
        android:id="@+id/adapter_vic_user_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/adapter_vic_user_head_iv"
        android:layout_toEndOf="@+id/adapter_vic_user_head_iv"
        android:layout_toRightOf="@+id/adapter_vic_user_head_iv"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_nomal_text"
        android:textSize="@dimen/textSize_fourteen"/>

    <TextView
        android:id="@+id/adapter_vic_user_fans_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/adapter_vic_user_head_iv"
        android:layout_toRightOf="@id/adapter_vic_user_head_iv"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_grey_b3"
        android:text="0人关注"/>
    <TextView
        android:id="@+id/adapter_vic_user_location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:maxEms="10"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/adapter_vic_user_fans_tv"
        android:layout_toLeftOf="@id/adapter_vic_user_focus_tv"
        android:layout_alignBottom="@id/adapter_vic_user_head_iv"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_grey_b3"/>
</RelativeLayout>