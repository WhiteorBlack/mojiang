<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_greyf2_selector">
    <TextView
        android:id="@+id/adapter_my_address_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:ems="8"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_fourteen"
        android:textColor="@color/color_nomal_text"/>

    <TextView
        android:id="@+id/adapter_my_address_phone_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adapter_my_address_address_tv"
        android:layout_toEndOf="@+id/adapter_my_address_name_tv"
        android:layout_toRightOf="@+id/adapter_my_address_name_tv"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_nomal_text"
        android:textSize="@dimen/textSize_fourteen" />
    <TextView
        android:id="@+id/adapter_my_address_address_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_my_address_name_tv"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_thirteen"
        android:textColor="@color/color_grey_5c"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/adapter_my_address_address_tv"
        android:background="@color/color_grey_f5" />
    <LinearLayout
        android:id="@+id/adapter_my_address_default_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/adapter_my_address_address_tv"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/adapter_my_address_default_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="3dp"
            android:src="@mipmap/ic_check_nomal" />
        <TextView
            android:id="@+id/adapter_my_address_default_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_grey_5c"
            android:text="默认地址"/>
    </LinearLayout>
    <TextView
        android:id="@+id/adapter_my_address_delete_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/adapter_my_address_address_tv"
        android:ems="3"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center"
        android:background="@drawable/round_border_grey_trans_1dp"
        android:textSize="@dimen/textSize_thirteen"
        android:textColor="@color/color_grey_5c"
        android:text="删除"/>

    <TextView
        android:id="@+id/adapter_my_address_edit_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@id/adapter_my_address_delete_lay"
        android:layout_below="@id/adapter_my_address_address_tv"
        android:ems="3"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center"
        android:background="@drawable/round_border_grey_trans_1dp"
        android:textSize="@dimen/textSize_thirteen"
        android:textColor="@color/color_grey_5c"
        android:text="编辑"/>
</RelativeLayout>