<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/adapter_cart_good_all_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_check_nomal_cart"/>
    <ImageView
        android:id="@+id/adapter_cart_good_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/adapter_cart_good_all_iv"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_icon"/>
    <TextView
        android:id="@+id/adapter_cart_good_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:ellipsize="end"
        android:layout_alignTop="@id/adapter_cart_good_iv"
        android:layout_toRightOf="@id/adapter_cart_good_iv"
        android:textSize="@dimen/textSize_thirteen"
        android:textColor="@color/color_nomal_text"
        android:text="商品名字商品名字商品名字商品名字商品名字"/>
    <TextView
        android:id="@+id/adapter_cart_good_guige_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/adapter_cart_good_name_tv"
        android:layout_toRightOf="@id/adapter_cart_good_iv"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_grey_text"
        android:text="规格：规格ingzi规格ingzi规格ingzi"/>
    <LinearLayout
        android:id="@+id/adapter_cart_good_count_lay"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:background="@drawable/cart_edit_lay_bg"
        android:layout_alignBottom="@id/adapter_cart_good_iv"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/adapter_cart_good_count_reduce_tv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:textSize="@dimen/textSize_fifteen"
            android:textColor="@color/color_nomal_text"
            android:text="-"/>
        <TextView
            android:id="@+id/adapter_cart_good_count_edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:background="@color/color_white"
            android:ems="3"
            android:textSize="@dimen/textSize_twelve"
            android:textColor="@color/color_nomal_text"
            android:text="10000"/>
        <TextView
            android:id="@+id/adapter_cart_good_count_add_tv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:textSize="@dimen/textSize_fifteen"
            android:textColor="@color/color_nomal_text"
            android:text="+"/>
    </LinearLayout>
    <TextView
        android:id="@+id/adapter_cart_good_money_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/adapter_cart_good_iv"
        android:layout_toRightOf="@id/adapter_cart_good_iv"
        android:layout_toLeftOf="@id/adapter_cart_good_count_lay"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_thirteen"
        android:textColor="@color/color_money_two"
        android:text="¥1000000000.00"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:visibility="gone"
        android:background="@color/activity_bg_common"
        android:layout_below="@id/adapter_cart_good_iv" />
</RelativeLayout>