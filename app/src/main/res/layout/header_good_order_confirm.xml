<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/header_good_order_confirm_main_lay"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/header_good_order_confirm_address_null_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_add_picture"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_nomal_text"
            android:text="选择地址"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/header_good_order_confirm_user_name_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/header_good_order_confirm_location_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_location_green"/>
        <TextView
            android:id="@+id/header_good_order_confirm_user_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/textSize_fifteen"
            android:textColor="@color/color_nomal_text"/>
    </LinearLayout>
    <TextView
        android:id="@+id/header_good_order_confirm_user_address_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:textSize="@dimen/textSize_thirteen"
        android:textColor="@color/color_grey_text"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/nomal_divider_height"
        android:background="@color/activity_bg_common" />
</LinearLayout>