<resources>


    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <!--<item name="android:windowEnterAnimation">@anim/loading_enter_anim</item>-->
        <!--<item name="android:windowExitAnimation">@anim/loading_exit_anim</item>-->
    </style>


    <style name="title_bar_back_style">
        <item name="android:layout_width">@dimen/titleBar_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:src">@drawable/selector_arrow_back</item>
    </style>

    <style name="title_bar_right_style">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>


    <!-- 分割线 -->
    <style name="line">
        <item name="android:background">@color/line_color</item>
    </style>

    <style name="line_vertical" parent="line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="line_horizontal" parent="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
    </style>


    <!-- 弹出框 -->
    <style name="dialog_common" parent="android:style/Theme.Dialog">
        <!--<item name="android:windowBackground">@drawable/dialod_paypassword</item>-->
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>


    <style parent="@android:style/Theme.Dialog" name="my_custom_dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>


</resources>
