<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_twelve"
        android:visibility="gone"
        android:textColor="@color/color_grey_text"
        android:text="下单时间："/>
    <TextView
        android:id="@+id/adapter_my_receive_order_time_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_grey_text"/>
    <TextView
        android:id="@+id/adapter_my_receive_order_op_finish_server"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:background="@drawable/round_theme_small_bg"
        android:ems="4"
        android:gravity="center"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_white"
        android:text="完成"/>
    <TextView
        android:id="@+id/adapter_my_receive_order_op_cancel_server"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:background="@drawable/round_border_theme_trans_1dp"
        android:ems="4"
        android:gravity="center"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_theme"
        android:text="取消订单"/>
    <TextView
        android:id="@+id/adapter_my_receive_order_op_edit_server"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:background="@drawable/round_border_theme_trans_1dp"
        android:ems="4"
        android:gravity="center"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_theme"
        android:text="修改订单"/>
    <TextView
        android:id="@+id/adapter_my_receive_order_op_pay_server"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:background="@drawable/round_theme_small_bg"
        android:ems="4"
        android:gravity="center"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_white"
        android:text="支付"/>
    <TextView
        android:id="@+id/adapter_my_receive_order_options_finish_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:ems="4"
        android:gravity="center"
        android:background="@drawable/round_theme_small_bg"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSize_twelve"
        android:text="确认收货"/>
    <TextView
        android:id="@+id/adapter_my_receive_order_options_cancel_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:ems="4"
        android:gravity="center"
        android:background="@drawable/round_border_theme_trans_1dp"
        android:textColor="@color/color_theme"
        android:textSize="@dimen/textSize_twelve"
        android:text="取消订单"/>
    <TextView
        android:id="@+id/adapter_my_receive_order_options_pay_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:ems="4"
        android:gravity="center"
        android:background="@drawable/round_theme_small_bg"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSize_twelve"
        android:text="支付"/>
    <TextView
        android:id="@+id/adapter_my_receive_order_options_finish_need_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:ems="3"
        android:gravity="center"
        android:background="@drawable/round_theme_small_bg"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSize_twelve"
        android:text="完成"/>
    <TextView
        android:id="@+id/adapter_my_receive_order_options_cancel_need_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:ems="3"
        android:gravity="center"
        android:background="@drawable/round_border_theme_trans_1dp"
        android:textColor="@color/color_theme"
        android:textSize="@dimen/textSize_twelve"
        android:text="取消订单"/>
    <TextView
        android:id="@+id/adapter_my_receive_order_options_pay_need_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:ems="3"
        android:gravity="center"
        android:background="@drawable/round_theme_small_bg"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSize_twelve"
        android:text="支付"/>
    <TextView
        android:id="@+id/adapter_my_receive_order_options_delete_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:ems="4"
        android:gravity="center"
        android:background="@drawable/round_theme_small_bg"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSize_twelve"
        android:text="删除订单"/>
    <TextView
        android:id="@+id/adapter_my_receive_order_options_comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:ems="4"
        android:gravity="center"
        android:background="@drawable/round_theme_small_bg"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSize_twelve"
        android:text="评价"/>
    <TextView
        android:id="@+id/adapter_my_receive_order_op_comment_server"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:background="@drawable/round_theme_small_bg"
        android:ems="4"
        android:gravity="center"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_white"
        android:text="评价"/>
</LinearLayout>