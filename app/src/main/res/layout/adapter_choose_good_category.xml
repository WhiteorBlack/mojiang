<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">
    <TextView
        android:id="@+id/adapter_choose_good_category_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="17dp"
        android:textSize="@dimen/textSize_fourteen"
        android:textColor="@color/color_nomal_text"/>
    <ImageView
        android:id="@+id/adapter_choose_good_category_more_iv"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/arrow_right"/>
    <ImageView
        android:id="@+id/adapter_choose_good_category_check_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_check_nomal"/>
    <TextView
        android:id="@+id/adapter_choose_good_category_choose_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toLeftOf="@id/adapter_choose_good_category_more_iv"
        android:layout_toRightOf="@id/adapter_choose_good_category_name_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_grey_text"/>
</RelativeLayout>