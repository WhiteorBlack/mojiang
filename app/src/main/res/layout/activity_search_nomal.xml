<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_common">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBar_height"
        android:background="@color/color_white">
        <ImageView
            android:id="@id/back"
            style="@style/title_bar_back_style" />
        <TextView
            android:id="@+id/acti_search_nomal_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/titleBar_height"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:ems="3"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_deep44_text"
            android:text="搜索"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_search_bg"
            android:layout_toLeftOf="@id/acti_search_nomal_right_tv"
            android:layout_toRightOf="@id/back"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="@dimen/title_bar_search_margin_tb"
            android:layout_marginBottom="@dimen/title_bar_search_margin_tb"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="15dp"
                style="@style/nomal_search_right_iv"/>
            <EditText
                android:id="@+id/acti_search_nomal_ev"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_trans"
                android:singleLine="true"
                android:ellipsize="end"
                android:padding="3dp"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/textSize_twelve"
                android:textColor="@color/color_light_grey_aa_text"
                android:hint="@string/nomal_search_def"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>