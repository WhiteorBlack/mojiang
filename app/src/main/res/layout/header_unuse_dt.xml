<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <cn.idcby.jiajubang.view.WebViewNoScroll
        android:id="@+id/header_unuse_dt_wv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_grey_f3"
        android:layout_below="@id/header_unuse_dt_wv"/>

    <TextView
        android:id="@+id/header_unuse_dt_comment_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_below="@id/header_unuse_dt_wv"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/textSize_fifteen"
        android:textStyle="bold"
        android:textColor="@color/color_nomal_text"
        android:text="留言（0）"/>
    <ImageView
        android:id="@+id/header_unuse_dt_comment_more_iv"
        android:layout_width="15dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:visibility="gone"
        android:layout_below="@id/header_unuse_dt_wv"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/arrow_right"/>
    <TextView
        android:id="@+id/header_unuse_dt_comment_more_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:layout_below="@id/header_unuse_dt_wv"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/header_unuse_dt_comment_more_iv"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_grey_text"
        android:text="更多"/>
</RelativeLayout>