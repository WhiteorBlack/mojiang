<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/adapter_server_comment_user_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:src="@mipmap/default_head_icon"/>
    <TextView
        android:id="@+id/adapter_server_comment_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_grey_text"
        android:text="2018-05-24 16:06:58"/>
    <TextView
        android:id="@+id/adapter_server_comment_user_name_tv"
        android:layout_width="0dp"
        android:layout_height="35dp"
        app:layout_constraintLeft_toRightOf="@id/adapter_server_comment_user_iv"
        app:layout_constraintRight_toLeftOf="@id/adapter_server_comment_time_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:textSize="@dimen/textSize_fourteen"
        android:textColor="@color/color_nomal_text"
        android:text="名字"/>
    <TextView
        android:id="@+id/adapter_server_comment_content_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adapter_server_comment_user_name_tv"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/textSize_thirteen"
        android:textColor="@color/color_deep33_text"
        android:text="名字"/>
    <LinearLayout
        android:id="@+id/adapter_server_comment_reply_lay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adapter_server_comment_content_tv"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical" />
</android.support.constraint.ConstraintLayout>