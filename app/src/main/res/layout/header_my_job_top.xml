<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">
    <LinearLayout
        android:id="@+id/header_my_jobs_com_add_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_add_picture"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_nomal_text"
            android:text="添加公司简介"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/header_my_jobs_com_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_my_jobs_com_add_tv" />
    <TextView
        android:id="@+id/header_my_jobs_com_edit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/header_my_jobs_com_add_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="5dp"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_grey_text"
        android:text="编辑"/>
    <TextView
        android:id="@+id/header_my_jobs_com_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/header_my_jobs_com_iv"
        app:layout_constraintLeft_toRightOf="@id/header_my_jobs_com_iv"
        app:layout_constraintRight_toLeftOf="@id/header_my_jobs_com_edit_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:lines="2"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_fourteen"
        android:textColor="@color/color_nomal_text"/>
    <TextView
        android:id="@+id/header_my_jobs_com_content_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header_my_jobs_com_name_tv"
        app:layout_constraintLeft_toRightOf="@id/header_my_jobs_com_iv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:layout_marginRight="15dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_deep33_text"/>
    <TextView
        android:id="@+id/header_my_jobs_com_address_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/header_my_jobs_com_content_tv"
        app:layout_constraintLeft_toRightOf="@id/header_my_jobs_com_iv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_deep33_text"/>
    <View
        android:id="@+id/header_my_jobs_com_dv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/header_my_jobs_com_iv"
        android:layout_marginTop="10dp"
        android:background="@color/color_grey_f2" />
    <TextView
        android:id="@+id/header_my_jobs_com_desc_tips_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/header_my_jobs_com_dv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/textSize_fourteen"
        android:textColor="@color/color_nomal_text"
        android:text="公司简介绍"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/header_my_jobs_com_desc_pic_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_my_jobs_com_desc_tips_tv"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:overScrollMode="never"
        android:scrollbars="none" />
    <TextView
        android:id="@+id/header_my_jobs_com_desc_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/header_my_jobs_com_desc_pic_rv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:maxLines="5"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_thirteen"
        android:textColor="@color/color_deep33_text"/>
    <ImageView
        android:id="@+id/header_my_jobs_com_desc_more_iv"
        android:layout_width="15dp"
        android:layout_height="25dp"
        android:paddingBottom="10dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_my_jobs_com_desc_tv"
        android:src="@mipmap/ic_arrow_down_c"/>
</android.support.constraint.ConstraintLayout>