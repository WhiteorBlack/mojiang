<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:lee="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <ImageView
            android:id="@+id/img_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/hyfw" />

        <TextView
            android:id="@+id/sub_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="行业需求"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/sub_tv_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="行业需求/郑州/最新" />

        <TextView
            android:id="@+id/sub_tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无更新"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow_right_small" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <cn.idcby.jiajubang.view.TagsCloudsLayout
            android:id="@+id/sub_list_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            lee:tagHorizontalSpace="10dp"
            lee:tagVerticalSpace="5dp"/>

    </LinearLayout>


</LinearLayout>