                        android:id="@+id/acti_create_resume_money_end_ev"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_grey_f8_bg"
                        android:gravity="center"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:inputType="number"
                        android:maxLength="5"
                        android:ems="4"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="6dp"
                        android:textColor="@color/color_nomal_text"
                        android:textSize="@dimen/textSize_fourteen" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/textSize_fourteen"
                        android:textColor="@color/color_nomal_text"
                        android:text="元"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/acti_create_resume_money_check_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
