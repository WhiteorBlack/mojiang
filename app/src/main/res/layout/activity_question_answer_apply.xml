<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBar_height">
        <ImageView
            android:id="@id/back"
            style="@style/title_bar_back_style"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/textSize_sixteen"
            android:textColor="@color/color_nomal_text"
            android:text="申请顾问"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_grey_f5" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textSize="@dimen/textSize_fourteen"
        android:textColor="@color/color_deep33_text"
        android:text="申请原因"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/color_grey_f5" />
    <EditText
        android:id="@+id/acti_answner_apply_reason_ev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_trans"
        android:lines="5"
        android:ellipsize="end"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="top|left"
        android:textSize="@dimen/textSize_thirteen"
        android:textColor="@color/color_nomal_text"
        android:hint="填写申请原因"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_grey_f5" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textSize="@dimen/textSize_fourteen"
        android:textColor="@color/color_deep33_text"
        android:text="申请用途"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/color_grey_f5" />
    <EditText
        android:id="@+id/acti_answner_apply_use_ev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_trans"
        android:lines="5"
        android:ellipsize="end"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="top|left"
        android:textSize="@dimen/textSize_thirteen"
        android:textColor="@color/color_nomal_text"
        android:hint="填写申请用途"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_grey_f3" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:paddingRight="8dp">
        <TextView
            android:id="@+id/acti_answner_apply_category_tip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_deep33_text"
            android:text="行业分类"/>
        <ImageView
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow_right"/>
        <TextView
            android:id="@+id/acti_answner_apply_category_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/acti_answner_apply_category_tip_tv"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_deep55_text"
            android:text="请选择"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_grey_f2" />
    <TextView
        android:id="@+id/acti_answner_apply_submit_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nomal_submit_height"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="@color/color_theme"
        android:textSize="@dimen/textSize_fourteen"
        android:textColor="@color/color_white"
        android:text="提交审核"/>
</LinearLayout>