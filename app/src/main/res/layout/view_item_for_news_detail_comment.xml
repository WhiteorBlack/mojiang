<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">
        <ImageView
            android:id="@+id/img_head_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_head_icon"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_fourteen"
                android:textColor="#303030" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#C2C2C2"
                android:textSize="@dimen/textSize_twelve" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="58dp"
        android:paddingRight="15dp"
        android:textColor="#5c5c5c"
        android:textSize="@dimen/textSize_fourteen" />

    <TextView
        android:id="@+id/tv_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:gravity="right"
        android:textSize="@dimen/textSize_fourteen"
        android:text="回复"
        android:textColor="@color/colorPrimary" />

    <cn.idcby.jiajubang.view.StationaryListView
        android:id="@+id/lv_second_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="58dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:dividerHeight="5dp"
        android:divider="@color/color_trans"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>
</LinearLayout>