<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@color/color_white">
    <ImageView
        android:id="@+id/adapter_question_comment_user_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/default_head_icon"/>
    <LinearLayout
        android:id="@+id/adapter_question_comment_useful_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/ic_support_checked"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textSize="@dimen/textSize_twelve"
            android:textColor="@color/color_nomal_text"
            android:text="最佳采纳"/>
    </LinearLayout>
    <TextView
        android:id="@+id/adapter_question_comment_user_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/adapter_question_comment_user_iv"
        android:layout_toLeftOf="@id/adapter_question_comment_useful_lay"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_fourteen"
        android:textColor="@color/color_nomal_text"/>
    <TextView
        android:id="@+id/adapter_question_comment_support_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/adapter_question_comment_user_iv"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_deepSkyBlue"/>
    <TextView
        android:id="@+id/adapter_question_comment_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/adapter_question_comment_user_iv"
        android:layout_alignBottom="@id/adapter_question_comment_user_iv"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_grey_text"/>

    <TextView
        android:id="@+id/adapter_question_comment_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="3dp"
        android:layout_below="@id/adapter_question_comment_user_iv"
        android:textSize="@dimen/textSize_thirteen"
        android:textColor="@color/color_nomal_text"
        android:text="回答内容"/>
    <cn.idcby.jiajubang.view.StationaryListView
        android:id="@+id/adapter_question_comment_receive_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_question_comment_content_tv"
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:dividerHeight="5dp"
        android:divider="@color/color_trans"
        android:padding="10dp"
        android:background="@drawable/shape_news_comment_bg" />
    <LinearLayout
        android:id="@+id/adapter_question_comment_support_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/adapter_question_comment_receive_lv"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/adapter_question_comment_support_iv"
            style="@style/nomal_item_bot_ic_style"
            android:src="@mipmap/ic_support_nomal"/>
        <TextView
            android:id="@+id/adapter_question_comment_support_tv"
            style="@style/nomal_item_bot_tv_style"
            android:text="点赞"/>
    </LinearLayout>

    <TextView
        android:id="@+id/adapter_question_comment_finish_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:ems="3"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:background="@drawable/round_border_theme_trans_1dp"
        android:layout_below="@id/adapter_question_comment_receive_lv"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_theme"
        android:text="采纳"/>

    <TextView
        android:id="@+id/adapter_question_comment_sub_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/adapter_question_comment_finish_tv"
        android:ems="3"
        android:layout_marginRight="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/round_border_theme_trans_1dp"
        android:layout_below="@id/adapter_question_comment_receive_lv"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_theme"
        android:text="追问"/>
</RelativeLayout>