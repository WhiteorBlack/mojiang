<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_white_bg">
    <TextView
        android:id="@+id/dialog_pay_bond_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:textSize="@dimen/textSize_sixteen"
        android:textColor="@color/color_nomal_text"
        android:text="缴纳保证金"/>
    <RelativeLayout
        android:id="@+id/dialog_pay_bond_money_lay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/dialog_pay_bond_title_tv"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@color/color_grey_f5">
        <TextView
            android:id="@+id/dialog_pay_bond_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_grey_text"
            android:text="元"/>
        <EditText
            android:id="@+id/dialog_pay_bond_money_ev"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/color_trans"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/dialog_pay_bond_money_tv"
            android:textSize="@dimen/textSize_sixteen"
            android:textColor="@color/color_nomal_text"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_grey_f3"
        android:layout_below="@id/dialog_pay_bond_money_lay"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:layout_below="@id/dialog_pay_bond_money_lay"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_pay_bond_cancel_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_grey_text"
            android:text="取消"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_grey_f3"/>
        <TextView
            android:id="@+id/dialog_pay_bond_ok_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_theme"
            android:text="确定"/>
    </LinearLayout>

</RelativeLayout>