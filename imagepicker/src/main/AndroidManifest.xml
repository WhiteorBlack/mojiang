<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="idcby.cn.imagepicker">


    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name="idcby.cn.imagepicker.ImageSelectorActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/ImageSelectorTheme" />
        <activity
            android:name=".preview.MultiImgShowActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/ImageShowTheme"></activity>


    </application>

</manifest>
