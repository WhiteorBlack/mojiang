<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_greyf2_selector">

    <include layout="@layout/adapter_my_receive_order_top" />

    <!--商品recyclerView-->
    <cn.idcby.jiajubang.view.RecyclerViewFocusble
        android:id="@+id/adapter_my_receive_order_good_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/activity_bg_common"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/adapter_my_receive_order_good_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_nomal_text"
            android:text="共0件商品，合计"/>
        <TextView
            android:id="@+id/adapter_my_receive_order_good_amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_money_two"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_nomal_text"
            android:text="元"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/color_grey_f2" />
    <include layout="@layout/adapter_my_receive_order_bottom" />
</LinearLayout>