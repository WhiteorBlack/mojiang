<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <ImageView
        android:id="@+id/adapter_unuse_spec_bg_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_icon" />
    <TextView
        android:id="@+id/adapter_unuse_spec_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/color_half_grey_f2"
        android:visibility="gone"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="bottom"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/color_nomal_text"
        android:textSize="@dimen/textSize_thirteen"/>
</RelativeLayout>
