<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:id="@+id/adapter_circle_item_support_lay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/adapter_circle_support_iv"
                style="@style/circle_item_bot_ic_style"
                android:src="@mipmap/ic_support_lv_nomal"/>
            <TextView
                android:id="@+id/adapter_circle_support_count_tv"
                style="@style/circle_item_bot_tv_style"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/adapter_circle_item_comment_lay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/adapter_circle_item_support_lay"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                style="@style/circle_item_bot_ic_style"
                android:src="@mipmap/gray_comment"/>
            <TextView
                android:id="@+id/adapter_circle_comment_count_tv"
                style="@style/circle_item_bot_tv_style"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/adapter_circle_item_trans_lay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/adapter_circle_item_comment_lay"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                style="@style/circle_item_bot_ic_style"
                android:padding="1dp"
                android:src="@mipmap/ic_zhuanfa"/>
            <TextView
                android:id="@+id/adapter_circle_trans_count_tv"
                style="@style/circle_item_bot_tv_style"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/adapter_circle_item_share_lay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                style="@style/circle_item_bot_ic_style"
                android:padding="1dp"
                android:src="@mipmap/bot_share"/>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/adapter_circle_item_bot_comment_content_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_activity_bg"
        android:padding="8dp">
        <TextView
            android:id="@+id/adapter_circle_item_bot_comment_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_grey_text"/>
        <TextView
            android:id="@+id/adapter_circle_item_bot_comment_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_grey_text"
            android:textStyle="bold"/>
    </FrameLayout>
</LinearLayout>