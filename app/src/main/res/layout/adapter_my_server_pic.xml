<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/adapter_my_server_pic_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/adapter_my_server_pic_delete_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:layout_alignRight="@id/adapter_my_server_pic_iv"
        android:layout_alignTop="@id/adapter_my_server_pic_iv"
        android:background="@drawable/nomal_pic_delete_bg"
        android:gravity="center"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_white"
        android:text="X"/>
</RelativeLayout>