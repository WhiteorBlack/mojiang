<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_greyf2_selector"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/adapter_question_list_reward_lay">
            <ImageView
                android:id="@+id/adapter_question_list_user_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_head_icon"/>
            <TextView
                android:id="@+id/adapter_question_list_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="8"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_toRightOf="@id/adapter_question_list_user_iv"
                android:textSize="@dimen/textSize_fourteen"
                android:textColor="@color/color_nomal_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/adapter_question_list_name_tv"
                android:background="@drawable/round_deep_sky_blue_small_bg"
                android:textSize="@dimen/textSize_ten"
                android:textColor="@color/color_white"
                android:text="提问者"/>
            <TextView
                android:id="@+id/adapter_question_list_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_alignBottom="@id/adapter_question_list_user_iv"
                android:layout_toRightOf="@id/adapter_question_list_user_iv"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/textSize_ten"
                android:textColor="@color/color_grey_text"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/adapter_question_list_reward_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/round_theme_small_bg"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/ic_money_pk_white"/>
            <TextView
                android:id="@+id/adapter_question_list_reward_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="3dp"
                android:maxLength="9"
                android:textSize="@dimen/textSize_thirteen"
                android:textColor="@color/color_white"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/adapter_question_list_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="@dimen/textSize_fourteen"
        android:textColor="@color/color_deep33_text"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/adapter_question_list_pic_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:layout_gravity="right"
        android:orientation="horizontal">
        <ImageView
            style="@style/nomal_item_bot_ic_style"
            android:visibility="gone"
            android:src="@mipmap/ic_support_lv_nomal"/>
        <TextView
            android:id="@+id/adapter_question_list_collection_count_tv"
            android:visibility="gone"
            style="@style/nomal_item_bot_tv_style"
            android:text="0"/>
        <ImageView
            style="@style/nomal_item_bot_ic_style"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/gray_comment"/>
        <TextView
            android:id="@+id/adapter_question_list_comment_count_tv"
            style="@style/nomal_item_bot_tv_style"
            android:text="0"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/activity_bg_common"
        android:layout_marginTop="12dp" />
</LinearLayout>