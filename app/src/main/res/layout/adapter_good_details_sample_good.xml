<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_white_bg"
    android:padding="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/adapter_good_details_good_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/default_icon"/>
    <TextView
        android:id="@+id/adapter_good_details_good_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/adapter_good_details_good_iv"
        app:layout_constraintRight_toRightOf="@id/adapter_good_details_good_iv"
        app:layout_constraintTop_toBottomOf="@id/adapter_good_details_good_iv"
        android:layout_marginTop="5dp"
        android:lines="2"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_thirteen"
        android:textColor="@color/color_nomal_text"/>
    <TextView
        android:id="@+id/adapter_good_details_good_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/adapter_good_details_good_iv"
        app:layout_constraintBottom_toBottomOf="@+id/adapter_good_details_good_price_tv"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_twelve"
        android:textColor="@color/color_grey_text"
        android:text="0人付款"/>
    <TextView
        android:id="@+id/adapter_good_details_good_price_tips_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/adapter_good_details_good_iv"
        app:layout_constraintBottom_toBottomOf="@+id/adapter_good_details_good_price_tv"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_fourteen"
        android:textColor="@color/color_money_two"
        android:text="¥"/>
    <TextView
        android:id="@+id/adapter_good_details_good_price_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/adapter_good_details_good_price_tips_tv"
        app:layout_constraintRight_toLeftOf="@id/adapter_good_details_good_count_tv"
        app:layout_constraintTop_toBottomOf="@id/adapter_good_details_good_name_tv"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_sixteen"
        android:textColor="@color/color_money_two"
        android:text="0"/>
</android.support.constraint.ConstraintLayout>