<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/adapter_near_user_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_head_icon"/>
    <TextView
        android:id="@+id/adapter_near_user_age_tv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:gravity="center"
        android:textSize="@dimen/textSize_ten"
        android:textColor="@color/color_white"
        android:layout_alignRight="@id/adapter_near_user_iv"
        android:layout_alignBottom="@id/adapter_near_user_iv"/>
</RelativeLayout>