<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_common"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBar_height"
        android:background="@color/color_white">
        <ImageView
            android:id="@id/back"
            style="@style/title_bar_back_style"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/round_border_theme_trans_1dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/radio_style_top_item_margin_tb"
            android:layout_marginBottom="@dimen/radio_style_top_item_margin_tb"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/acti_my_center_type_left_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="4"
                android:gravity="center"
                android:background="@drawable/round_theme_small_bg"
                android:textSize="@dimen/textSize_fourteen"
                android:textColor="@color/color_white"
                android:text="简历管理"/>
            <TextView
                android:id="@+id/acti_my_center_type_middle_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="4"
                android:gravity="center"
                android:background="@drawable/drawable_white_trans"
                android:textSize="@dimen/textSize_fourteen"
                android:textColor="@color/color_theme"
                android:text="招聘管理"/>
            <TextView
                android:id="@+id/acti_my_center_type_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="5"
                android:gravity="center"
                android:background="@drawable/drawable_white_trans"
                android:textSize="@dimen/textSize_fourteen"
                android:textColor="@color/color_theme"
                android:text="购买的简历"/>
        </LinearLayout>
        <TextView
            android:id="@+id/acti_my_center_jobs_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:gravity="center"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_grey_text"
            android:text="创建"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_grey_f5" />
    <FrameLayout
        android:id="@+id/acti_my_center_job_content_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>