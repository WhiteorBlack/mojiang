<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/adapter_my_comment_user_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/default_head_icon"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/adapter_my_comment_user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_thirteen"
                android:textColor="@color/color_nomal_text"/>
            <TextView
                android:id="@+id/adapter_my_comment_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/adapter_my_comment_user_name_tv"
                android:textSize="@dimen/textSize_eleven"
                android:textColor="@color/color_grey_text"/>
            <TextView
                android:id="@+id/adapter_my_comment_spec_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_below="@id/adapter_my_comment_user_name_tv"
                android:layout_toRightOf="@id/adapter_my_comment_time_tv"
                android:textSize="@dimen/textSize_eleven"
                android:textColor="@color/color_grey_text"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/adapter_my_comment_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="@dimen/textSize_thirteen"
        android:textColor="@color/color_nomal_text"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/adapter_my_comment_picture_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"/>
    <LinearLayout
        android:id="@+id/adapter_my_comment_content_resend_time_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/adapter_my_comment_content_resend_time_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_money_two"
            android:text="用户7天后追评"/>

        <TextView
            android:id="@+id/adapter_my_comment_content_resend_delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:padding="5dp"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_theme"
            android:text="删除"/>
    </LinearLayout>
    <TextView
        android:id="@+id/adapter_my_comment_content_resend_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="@dimen/textSize_thirteen"
        android:textColor="@color/color_nomal_text"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/adapter_my_comment_picture_resend_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"/>
    <RelativeLayout
        android:id="@+id/adapter_my_comment_good_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/activity_bg_common">
        <ImageView
            android:id="@+id/adapter_my_comment_good_iv"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/adapter_my_comment_good_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:ellipsize="end"
            android:layout_toRightOf="@id/adapter_my_comment_good_iv"
            android:textSize="@dimen/textSize_fourteen"
            android:textColor="@color/color_nomal_text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:layout_alignBottom="@id/adapter_my_comment_good_iv"
            android:layout_toRightOf="@id/adapter_my_comment_good_iv"
            android:gravity="bottom"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_twelve"
                android:textColor="@color/color_nomal_text"
                android:text="¥"/>
            <TextView
                android:id="@+id/adapter_my_comment_good_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/textSize_fifteen"
                android:textColor="@color/color_nomal_text"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/adapter_my_comment_option_delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border_theme_trans_1dp"
            android:ems="5"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_theme"
            android:text="删除评价"/>
        <TextView
            android:id="@+id/adapter_my_comment_option_add_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_theme_small_bg"
            android:ems="5"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="@dimen/textSize_thirteen"
            android:textColor="@color/color_white"
            android:text="追加评价"/>
    </LinearLayout>
</LinearLayout>